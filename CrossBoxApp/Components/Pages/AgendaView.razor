    .user-item i { color: #F8C545; }
    
    .fade-in { animation: fadeIn 0.5s ease; }
    @@keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

@code {
    private List<AgendaVisualDto> agendaData = new List<AgendaVisualDto>();
    private Guid horarioSeleccionado;
    private bool cargando = true;
    private Guid miReservaActualId = Guid.Empty;
    
    // --- LÓGICA DE FECHAS ---
    private DateTime fechaSeleccionada = DateTime.Today;
    private bool EsHoy => fechaSeleccionada.Date == DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task SeleccionarHoy()
    {
        if (EsHoy) return;
        fechaSeleccionada = DateTime.Today;
        await CargarDatos();
    }

    private async Task SeleccionarManana()
    {
        if (!EsHoy) return;
        fechaSeleccionada = DateTime.Today.AddDays(1);
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        try
        {
            cargando = true;
            // Reiniciamos selecciones al cambiar de día
            horarioSeleccionado = Guid.Empty;
            miReservaActualId = Guid.Empty;
            agendaData.Clear();
            StateHasChanged(); 

            if (Sesion.Usuario == null) { Nav.NavigateTo("/"); return; }

            var boxId = Sesion.Usuario.BoxID;
            var userId = Sesion.Usuario.UsuarioID;
            
            // Enviamos la fecha seleccionada en formato "yyyy-MM-dd"
            string fechaStr = fechaSeleccionada.ToString("yyyy-MM-dd");

            var response = await Http.GetAsync($"https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/agendaapi/visual/{boxId}/{userId}/{fechaStr}");

            if (response.IsSuccessStatusCode)
            {
                agendaData = await response.Content.ReadFromJsonAsync<List<AgendaVisualDto>>();

                // Verificar si YA tengo reserva en ESTE día
                var miHorario = agendaData.FirstOrDefault(x => x.EsMiReserva);
                if (miHorario != null)
                {
                    miReservaActualId = miHorario.HorarioId;
                    horarioSeleccionado = miReservaActualId;
                }
            }
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error", "No se pudo cargar la agenda", "OK");
        }
        finally
        {
            cargando = false;
        }
    }

    private async Task ReservarClase()
    {
        if (horarioSeleccionado == Guid.Empty)
        {
            await App.Current.MainPage.DisplayAlert("Atención", "Selecciona un horario.", "OK");
            return;
        }

        try
        {
            var reserva = new ReservaDto
            {
                UsuarioId = Sesion.Usuario.UsuarioID,
                BoxId = Sesion.Usuario.BoxID,
                HorarioId = horarioSeleccionado,
                Fecha = fechaSeleccionada // Enviamos la fecha del Tab activo (Hoy o Mañana)
            };

            var response = await Http.PostAsJsonAsync("https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/agendaapi/reservar", reserva);

            if (response.IsSuccessStatusCode)
            {
                string dia = EsHoy ? "hoy" : "mañana";
                await App.Current.MainPage.DisplayAlert("¡Listo!", $"Clase reservada para {dia}.", "OK");
                await CargarDatos();
            }
            else
            {
                var errorMsg = await response.Content.ReadFromJsonAsync<dynamic>();
                string mensaje = errorMsg.ToString();
                try { mensaje = errorMsg.GetProperty("mensaje").GetString(); } catch { }
                await App.Current.MainPage.DisplayAlert("Aviso", mensaje, "OK");
            }
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error", "Fallo al reservar.", "OK");
        }
    }

    private async Task CancelarReserva()
    {
        bool confirmar = await App.Current.MainPage.DisplayAlert("Cancelar", "¿Seguro que quieres cancelar?", "Sí", "No");
        if (!confirmar) return;

        try
        {
            var reserva = new ReservaDto
            {
                UsuarioId = Sesion.Usuario.UsuarioID,
                BoxId = Sesion.Usuario.BoxID,
                Fecha = fechaSeleccionada // Importante para cancelar la del día correcto
            };

            var response = await Http.PostAsJsonAsync("https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/agendaapi/cancelar", reserva);

            if (response.IsSuccessStatusCode)
            {
                await App.Current.MainPage.DisplayAlert("Listo", "Reserva cancelada.", "OK");
                await CargarDatos();
            }
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error", "No se pudo cancelar.", "OK");
        }
    }

    private void Volver() => Nav.NavigateTo("/home");
}