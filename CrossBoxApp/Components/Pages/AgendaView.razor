@page "/agenda-view"
@using CrossBoxApp.Models
@using CrossBoxApp.Models.Services
@inject NavigationManager Nav
@inject HttpClient Http
@inject SesionService Sesion

<div class="main-layout">

    @* --- NAVBAR (PROTEGIDO PARA NOTCH) --- *@
    <div class="navbar-container">
        <div class="nav-left" @onclick="Volver">
            <i class="fas fa-arrow-left"></i> VOLVER
        </div>
        <div class="nav-title">AGENDA TU CLASE</div>
        <div class="nav-right"></div>
    </div>

    <div class="scrollable-content">
        
        @* --- TABS DE FECHA (HOY / MAÑANA) --- *@
        <div class="date-tabs-container fade-in">
            <button class="tab-date @(EsHoy ? "active" : "")" @onclick="SeleccionarHoy">
                <span>HOY</span>
                <small>@DateTime.Now.ToString("dd MMM").ToUpper()</small>
            </button>
            <button class="tab-date @(!EsHoy ? "active" : "")" @onclick="SeleccionarManana">
                <span>MAÑANA</span>
                <small>@DateTime.Now.AddDays(1).ToString("dd MMM").ToUpper()</small>
            </button>
        </div>

        @* --- TÍTULO DE LA FECHA SELECCIONADA --- *@
        <h2 class="date-header">@fechaSeleccionada.ToString("dddd, dd MMMM").ToUpper()</h2>

        <div class="booking-section fade-in">
            @if (miReservaActualId == Guid.Empty)
            {
                <label class="lbl-input">Selecciona tu horario:</label>
                <div class="input-group">
                    <select @bind="horarioSeleccionado" class="form-control input-dark">
                        <option value="">-- Elige Hora --</option>
                        @foreach (var item in agendaData)
                        {
                            <option value="@item.HorarioId">@item.HorarioNombre</option>
                        }
                    </select>
                    <button class="btn-reservar" @onclick="ReservarClase">RESERVAR</button>
                </div>
            }
            else
            {
                <div class="reservation-info text-center fade-in">
                    <div class="success-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <p class="success-text">
                        Ya tienes clase reservada para @(EsHoy ? "HOY" : "MAÑANA").
                    </p>
                    <button class="btn-cancelar w-100" @onclick="CancelarReserva">
                        CANCELAR MI RESERVACIÓN
                    </button>
                </div>
            }
        </div>

        <div class="divider"></div>

        @if (cargando)
        {
            <div class="text-center mt-4">
                <div class="spinner-border text-warning"></div>
                <p class="mt-2 text-muted">Cargando horarios...</p>
            </div>
        }
        else
        {
            <div class="cards-grid">
                @if(agendaData.Count == 0)
                {
                     <div class="text-center text-muted mt-4">No hay horarios disponibles para este día.</div>
                }

                @foreach (var horario in agendaData)
                {
                    <div class="schedule-card fade-in">
                        <div class="card-header">
                            <span class="time-text">@horario.HorarioNombre</span>
                            <span class="badge-count">@horario.UsuariosInscritos.Count Atletas</span>
                        </div>
                        <div class="card-body">
                            @if (horario.UsuariosInscritos.Count == 0)
                            {
                                <p class="text-muted small mb-0">Sin atletas registrados aún.</p>
                            }
                            else
                            {
                                <div class="user-list">
                                    @foreach (var usuario in horario.UsuariosInscritos)
                                    {
                                        <div class="user-item">
                                            <i class="fas fa-user-check"></i> 
                                            <span>@usuario</span>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        
        <div style="height: 40px;"></div>
    </div>
</div>

<style>
