    .btn-reservar:active { transform: scale(0.95); }
    
    .success-icon { font-size: 3rem; color: #28a745; margin-bottom: 10px; }
    .success-text { color: #eee; font-size: 1.1rem; margin-bottom: 15px; font-weight: bold; }
