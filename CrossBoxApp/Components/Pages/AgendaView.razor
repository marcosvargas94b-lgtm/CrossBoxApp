    .time-text { font-family: 'Oswald'; font-size: 1.1rem; color: white; font-weight: bold; }
    .badge-count { background: #F8C545; color: black; padding: 3px 10px; border-radius: 10px; font-size: 0.8rem; font-weight: bold; }
    .card-body { padding: 15px; }
    .user-list { display: flex; flex-direction: column; gap: 8px; }
    .user-item { display: flex; align-items: center; gap: 10px; padding-bottom: 8px; border-bottom: 1px solid #333; color: #ccc; font-size: 0.95rem; }
