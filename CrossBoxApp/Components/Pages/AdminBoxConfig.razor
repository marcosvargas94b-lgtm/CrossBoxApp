@code {
    private int tabActiva = 1;
    private bool guardando = false;
    private BoxConfigDTO datosBox = new BoxConfigDTO();
    private string appId = "3844219986795201";
    private string redirectUri = "https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/marketplace/oauth/callback";

    // --- VARIABLES IMAGEN ---
    private IBrowserFile? archivoSeleccionado;
    private string? previewImagen;
    private bool subiendoImagen = false;
    // URL Base para las imágenes (Ajústala si es diferente)
    private string urlBaseImagenes = "https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/Imagenes/Logos/";

    protected override void OnInitialized()
    {
        _ = CargarDatos();
        var ventana = Application.Current?.MainPage?.Window;
        if (ventana != null) ventana.Resumed += AlVolverAlaApp;
    }

    private void AlVolverAlaApp(object? sender, EventArgs e)
    {
        InvokeAsync(async () =>
        {
            await Task.Delay(1500);
            await CargarDatos();
            StateHasChanged();
        });
    }

    public void Dispose()
    {
        var ventana = Application.Current?.MainPage?.Window;
        if (ventana != null) ventana.Resumed -= AlVolverAlaApp;
    }

    private async Task CargarDatos()
    {
        try
        {
            var response = await Http.GetAsync($"https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/boxesAPI/config/{Sesion.Usuario.BoxID}");

            if (response.IsSuccessStatusCode)
            {
                var resultado = await response.Content.ReadFromJsonAsync<BoxConfigDTO>();
                if (resultado != null)
                {
                    datosBox = resultado;
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error cargando: " + ex.Message);
        }
    }

    // --- LÓGICA DE SUBIDA DE IMAGEN ---

    private async Task ProcesarSeleccionImagen(InputFileChangeEventArgs e)
    {
        try
        {
            var file = e.File;
            // Validar tipo y tamaño (ej. max 5MB)
            if (!file.ContentType.Contains("image"))
            {
                await App.Current.MainPage.DisplayAlert("Error", "Selecciona un archivo de imagen válido.", "OK");
                return;
            }
            if (file.Size > 5 * 1024 * 1024)
            {
                await App.Current.MainPage.DisplayAlert("Muy pesado", "La imagen no debe pesar más de 5MB.", "OK");
                return;
            }

            // Crear preview
            var formato = "image/png";
            var buffer = new byte[file.Size];
            await file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024).ReadAsync(buffer);
            previewImagen = $"data:{formato};base64,{Convert.ToBase64String(buffer)}";
            
            archivoSeleccionado = file;
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error", "No se pudo leer la imagen: " + ex.Message, "OK");
        }
    }

    private async Task SubirImagenAlServidor()
    {
        if (archivoSeleccionado == null) return;

        subiendoImagen = true;
        try
        {
            using var content = new MultipartFormDataContent();
            
            // Leemos el archivo seleccionado
            var fileContent = new StreamContent(archivoSeleccionado.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024));
            fileContent.Headers.ContentType = new MediaTypeHeaderValue(archivoSeleccionado.ContentType);

            // "logo" es el nombre del campo que espera el API, "filename.jpg" es el nombre del archivo
            content.Add(fileContent, "logo", archivoSeleccionado.Name);

            // Enviamos al endpoint (Asegúrate de crear este endpoint en tu API)
            var response = await Http.PostAsync($"https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/boxesAPI/subir-logo/{Sesion.Usuario.BoxID}", content);

            if (response.IsSuccessStatusCode)
            {
                await App.Current.MainPage.DisplayAlert("¡Éxito!", "Logo actualizado correctamente.", "OK");
                archivoSeleccionado = null; // Limpiar selección
                previewImagen = null;       // Limpiar preview local
                await CargarDatos();        // Recargar datos para traer el nuevo Guid del servidor
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                await App.Current.MainPage.DisplayAlert("Error", "No se pudo subir: " + error, "OK");
            }
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error de conexión", ex.Message, "OK");
        }
        finally
        {
            subiendoImagen = false;
        }
    }

  private string ObtenerUrlLogo(Guid logoId)
    {
        // El truco: Agregamos "?t=..." con la hora actual.
        // Esto obliga al navegador a descargar la imagen nueva sí o sí.
        return $"{urlBaseImagenes}{logoId}.jpg?t={DateTime.Now.Ticks}";
    }
    // ----------------------------------

    private async Task GuardarPrecios()
    {
        guardando = true;
        try
        {
            datosBox.BoxID = Sesion.Usuario.BoxID;
            var response = await Http.PostAsJsonAsync("https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/boxesAPI/actualizar-precios", datosBox);

            if (response.IsSuccessStatusCode)
                await App.Current.MainPage.DisplayAlert("¡Éxito!", "Precios actualizados correctamente.", "OK");
            else
                await App.Current.MainPage.DisplayAlert("Error", "No se pudieron guardar los cambios.", "OK");
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error", ex.Message, "OK");
        }
        finally
        {
            guardando = false;
        }
    }

    private async Task DesvincularCuenta()
    {
        bool confirmar = await App.Current.MainPage.DisplayAlert("¿Desconectar?",
            "Si te desconectas, tus atletas ya no podrán pagarte en la App.",
            "Sí, desconectar", "Cancelar");

        if (confirmar)
        {
            try
            {
                var response = await Http.PostAsync($"https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/boxesAPI/desvincular/{Sesion.Usuario.BoxID}", null);
                if (response.IsSuccessStatusCode) await CargarDatos();
                else await App.Current.MainPage.DisplayAlert("Error", "No se pudo desconectar.", "OK");
            }
            catch (Exception ex)
            {
                await App.Current.MainPage.DisplayAlert("Error", ex.Message, "OK");
            }
        }
    }

    private async Task VincularMercadoPago()
    {
        string url = $"https://auth.mercadopago.com.mx/authorization?client_id={appId}&response_type=code&platform_id=mp&state={Sesion.Usuario.BoxID}&redirect_uri={redirectUri}";
        await Browser.Default.OpenAsync(url, BrowserLaunchMode.SystemPreferred);
    }

    public class BoxConfigDTO
    {
        public Guid BoxID { get; set; }
        public decimal? PrecioMensualidad { get; set; }
        public decimal? PrecioInscripcion { get; set; }
        public bool EstaVinculadoMP { get; set; }
        // Agregamos el campo Logo
        public Guid? Logo { get; set; }
    }
}