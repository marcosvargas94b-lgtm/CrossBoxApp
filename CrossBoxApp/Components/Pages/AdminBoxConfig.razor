@page "/admin/config-box"
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Nav
@inject CrossBoxApp.Models.Services.SesionService Sesion
@implements IDisposable

<div class="main-layout">

    <div class="navbar-container">
        <div class="nav-left" @onclick='() => Nav.NavigateTo("/home")'>
            <i class="fas fa-arrow-left"></i> VOLVER
        </div>
        <div class="nav-title">TU NEGOCIO</div>
        <div class="nav-right"></div>
    </div>

    <div class="scrollable-content">
        
        <div class="header-section text-center fade-in">
            <i class="fas fa-cogs brand-icon"></i>
            <h2>GESTIÓN</h2>
            <p>Configura cobros y precios de tu Box.</p>
        </div>

        <div class="tabs-container fade-in">
            <button class="tab-btn @(tabActiva == 1 ? "active" : "")" @onclick="() => tabActiva = 1">
                <i class="fas fa-hand-holding-usd"></i> MERCADO PAGO
            </button>
            <button class="tab-btn @(tabActiva == 2 ? "active" : "")" @onclick="() => tabActiva = 2">
                <i class="fas fa-tag"></i> PRECIOS
            </button>
        </div>

        <div class="cards-wrapper">

            @if (tabActiva == 1)
            {
                <div class="mp-card text-center fade-in">
                    <img src="https://http2.mlstatic.com/frontend-assets/ui-navigation/5.19.1/mercadopago/logo__small.png" alt="Mercado Pago" width="100" class="mb-3" />

                    @if (datosBox.EstaVinculadoMP)
                    {
                        <div class="status-connected fade-in">
                            <i class="fas fa-check-circle fa-3x mb-2"></i>
                            <h4>¡CUENTA VINCULADA!</h4>
                            <p>Tu gimnasio ya está listo para recibir pagos.</p>
                        </div>

                        <button class="btn-mp-connect outline mt-3" @onclick="VincularMercadoPago">
                            Cambiar cuenta vinculada
                        </button>

                        <button class="btn-unlink mt-3" @onclick="DesvincularCuenta">
                            <i class="fas fa-trash-alt"></i> Desconectar Cuenta
                        </button>
                    }
                    else
                    {
                        <h5 class="section-title">RECIBIR PAGOS</h5>
                        <p class="text-muted small mb-4">
                            Para que los atletas te paguen directo a ti, conecta tu cuenta.
                        </p>

                        <div class="mp-status-box">
                            <i class="fas fa-exclamation-circle"></i>
                            <span>Estado: <strong>Sin conexión</strong></span>
                        </div>

                        <button class="btn-mp-connect mt-4" @onclick="VincularMercadoPago">
                            <b>CONECTAR CUENTA AHORA</b>
                        </button>

                        <p class="text-muted x-small mt-3">
                            Al hacer clic, serás redirigido a Mercado Pago.
                        </p>
                    }
                </div>
            }

            @if (tabActiva == 2)
            {
                <div class="prices-card text-center fade-in">
                    <h5 class="section-title">PRECIOS DE TU BOX</h5>
                    <p class="text-muted small">Define cuánto cobrará la App a tus atletas.</p>

                    <div class="form-group mt-3 text-start">
                        <label class="lbl-input">Mensualidad ($)</label>
                        <input type="number" @bind="datosBox.PrecioMensualidad" class="form-control input-dark" />
                    </div>

                    <div class="form-group mt-3 text-start">
                        <label class="lbl-input">Inscripción ($)</label>
                        <input type="number" @bind="datosBox.PrecioInscripcion" class="form-control input-dark" />
                        <small class="text-muted" style="font-size: 0.75rem;">Pon 0 si no cobras inscripción.</small>
                    </div>

                    <button class="btn-save mt-4" @onclick="GuardarPrecios" disabled="@guardando">
                        @if (guardando)
                        {
                            <span><i class="fas fa-spinner fa-spin"></i> GUARDANDO...</span>
                        }
                        else
                        {
                            <span><i class="fas fa-save"></i> GUARDAR CAMBIOS</span>
                        }
                    </button>
                </div>
            }
        </div>
        
        <div style="height: 40px;"></div>
    </div>
</div>

<style>
    /* --- ESTRUCTURA BASE --- */
    .main-layout {
        position: fixed; top: 0; left: 0; right: 0; bottom: 0;
        background-color: #0d0d0d; display: flex; flex-direction: column; z-index: 1;
    }

    .navbar-container {
        flex-shrink: 0;
        padding-top: calc(env(safe-area-inset-top) + 5px);
        padding-bottom: 10px; padding-left: 20px; padding-right: 20px;
        background-color: #0d0d0d; border-bottom: 1px solid #F8C545;
        color: white; display: flex; justify-content: space-between; align-items: center;
        z-index: 100; font-family: 'Oswald'; min-height: 60px;
    }

    .nav-left { color: #F8C545; font-weight: bold; cursor: pointer; display: flex; align-items: center; gap: 8px; font-size: 0.9rem; }
    .nav-title { font-weight: bold; font-size: 1.1rem; color: white; letter-spacing: 1px; }
    .nav-right { width: 60px; }

    .scrollable-content {
        flex-grow: 1; overflow-y: auto; padding: 20px;
        display: flex; flex-direction: column; align-items: center;
        -webkit-overflow-scrolling: touch; padding-bottom: 40px;
    }

    /* --- ESTILOS CONFIG BOX --- */
    
    .header-section { margin-bottom: 20px; }
    .brand-icon { font-size: 3rem; color: #F8C545; margin-bottom: 10px; margin-top: 10px; }
    .header-section h2 { font-family: 'Oswald'; color: white; margin: 0; }
    .header-section p { color: #888; font-size: 0.9rem; }

    /* TABS */
    .tabs-container {
        display: flex; justify-content: center; margin-bottom: 20px;
        border-bottom: 1px solid #333; width: 100%; max-width: 600px;
    }

    .tab-btn {
        flex: 1; background: none; border: none; color: #666;
        padding: 15px; font-weight: bold; border-bottom: 2px solid transparent;
        transition: 0.3s; cursor: pointer; font-family: 'Oswald';
    }
    .tab-btn.active { color: #F8C545; border-bottom: 2px solid #F8C545; }
    .tab-btn i { margin-right: 5px; }

    .cards-wrapper { width: 100%; max-width: 600px; }

    /* TARJETAS */
    .prices-card, .mp-card {
        background: #1a1a1a; border-radius: 15px; padding: 25px;
        border: 1px solid #333; box-shadow: 0 4px 15px rgba(0,0,0,0.5);
        width: 100%;
    }

    .section-title { font-family: 'Oswald'; color: #F8C545; letter-spacing: 1px; margin-bottom: 5px; }

    .lbl-input { color: #F8C545; font-size: 0.9rem; font-weight: bold; display: block; margin-bottom: 5px; }
    
    .input-dark {
        background: #333 !important; color: white !important; border: 1px solid #555;
        padding: 10px; font-size: 1.1rem; border-radius: 8px;
    }
    .input-dark:focus { border-color: #F8C545; box-shadow: 0 0 5px rgba(248, 197, 69, 0.3); }

    .btn-save {
        width: 100%; background-color: #F8C545; color: black;
        font-weight: bold; padding: 12px; border: none; border-radius: 8px;
        font-family: 'Oswald'; font-size: 1.1rem; transition: 0.2s;
    }
    .btn-save:active { transform: scale(0.98); }
    .btn-save:disabled { background-color: #555; color: #888; }

    /* MERCADO PAGO */
    .mp-status-box {
        background: rgba(255, 0, 0, 0.1); border: 1px solid #ff4444;
        padding: 10px; border-radius: 8px; color: #ff4444;
        display: inline-block; width: 100%; font-size: 0.9rem;
    }

    .status-connected {
        color: #00c853; border: 1px solid #00c853;
        background: rgba(0, 200, 83, 0.1); padding: 20px;
        border-radius: 10px;
    }
    .status-connected h4 { margin: 0; font-family: 'Oswald'; margin-top: 10px; }

    .btn-mp-connect {
        display: block; width: 100%; padding: 15px;
        background-color: #009EE3; color: white;
        border-radius: 50px; border: none; text-decoration: none;
        font-weight: bold; box-shadow: 0 4px 15px rgba(0, 158, 227, 0.4);
        margin-top: 20px; transition: transform 0.2s; cursor: pointer;
    }
    .btn-mp-connect.outline {
        background: transparent; border: 1px solid #009EE3;
        color: #009EE3; box-shadow: none;
    }
    .btn-mp-connect:active { transform: scale(0.98); }

    .btn-unlink {
        background: transparent; border: 1px solid #ff4444;
        color: #ff4444; width: 100%; padding: 10px;
        border-radius: 50px; font-weight: bold; margin-top: 10px;
        cursor: pointer;
    }
    .btn-unlink:active { background: #ff4444; color: white; }

    .x-small { font-size: 0.7rem; }
    .fade-in { animation: fadeIn 0.5s ease; }
    @@keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
</style>

@code {
    private int tabActiva = 1;
    private bool guardando = false;
    private BoxConfigDTO datosBox = new BoxConfigDTO();
    private string appId = "3844219986795201";
    private string redirectUri = "https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/marketplace/oauth/callback";

    protected override void OnInitialized()
    {
        _ = CargarDatos();
        var ventana = Application.Current?.MainPage?.Window;
        if (ventana != null) ventana.Resumed += AlVolverAlaApp;
    }

    private void AlVolverAlaApp(object? sender, EventArgs e)
    {
        InvokeAsync(async () =>
        {
            await Task.Delay(1500);
            await CargarDatos();
            StateHasChanged();
        });
    }

    public void Dispose()
    {
        var ventana = Application.Current?.MainPage?.Window;
        if (ventana != null) ventana.Resumed -= AlVolverAlaApp;
    }

    private async Task CargarDatos()
    {
        try
        {
            var response = await Http.GetAsync($"https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/boxesAPI/config/{Sesion.Usuario.BoxID}");

            if (response.IsSuccessStatusCode)
            {
                var resultado = await response.Content.ReadFromJsonAsync<BoxConfigDTO>();
                if (resultado != null)
                {
                    datosBox = resultado;
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error cargando: " + ex.Message);
        }
    }

    private async Task GuardarPrecios()
    {
        guardando = true;
        try
        {
            datosBox.BoxID = Sesion.Usuario.BoxID;
            var response = await Http.PostAsJsonAsync("https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/boxesAPI/actualizar-precios", datosBox);

            if (response.IsSuccessStatusCode)
                await App.Current.MainPage.DisplayAlert("¡Éxito!", "Precios actualizados correctamente.", "OK");
            else
                await App.Current.MainPage.DisplayAlert("Error", "No se pudieron guardar los cambios.", "OK");
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error", ex.Message, "OK");
        }
        finally
        {
            guardando = false;
        }
    }

    private async Task DesvincularCuenta()
    {
        bool confirmar = await App.Current.MainPage.DisplayAlert("¿Desconectar?",
            "Si te desconectas, tus atletas ya no podrán pagarte en la App.",
            "Sí, desconectar", "Cancelar");

        if (confirmar)
        {
            try
            {
                var response = await Http.PostAsync($"https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/boxesAPI/desvincular/{Sesion.Usuario.BoxID}", null);
                if (response.IsSuccessStatusCode) await CargarDatos();
                else await App.Current.MainPage.DisplayAlert("Error", "No se pudo desconectar.", "OK");
            }
            catch (Exception ex)
            {
                await App.Current.MainPage.DisplayAlert("Error", ex.Message, "OK");
            }
        }
    }

    private async Task VincularMercadoPago()
    {
        string url = $"https://auth.mercadopago.com.mx/authorization?client_id={appId}&response_type=code&platform_id=mp&state={Sesion.Usuario.BoxID}&redirect_uri={redirectUri}";
        await Browser.Default.OpenAsync(url, BrowserLaunchMode.SystemPreferred);
    }

    public class BoxConfigDTO
    {
        public Guid BoxID { get; set; }
        public decimal? PrecioMensualidad { get; set; }
        public decimal? PrecioInscripcion { get; set; }
        public bool EstaVinculadoMP { get; set; }
    }
}