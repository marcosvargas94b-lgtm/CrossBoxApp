@page "/admin/config-box"
@using System.Net.Http.Json
@using System.Net.Http.Headers
@inject HttpClient Http
@inject NavigationManager Nav
@inject CrossBoxApp.Models.Services.SesionService Sesion
@implements IDisposable

<div class="main-layout">

    <div class="navbar-container">
        <div class="nav-left" @onclick='() => Nav.NavigateTo("/home")'>
            <i class="fas fa-arrow-left"></i> VOLVER
        </div>
        <div class="nav-title">TU NEGOCIO</div>
        <div class="nav-right"></div>
    </div>

    <div class="scrollable-content">
        
        <div class="header-section text-center fade-in">
            @* Muestra el Logo si existe, sino el icono por defecto *@
            @if (datosBox.Logo != null && datosBox.Logo != Guid.Empty && string.IsNullOrEmpty(previewImagen))
            {
                <img src="@ObtenerUrlLogo(datosBox.Logo.Value)" class="profile-logo-img pulse-animation" />
            }
            else if (!string.IsNullOrEmpty(previewImagen))
            {
                <img src="@previewImagen" class="profile-logo-img pulse-animation" />
            }
            else
            {
                <div class="brand-icon-circle">
                    <i class="fas fa-dumbbell"></i>
                </div>
            }

            <h2>GESTIÓN</h2>
            <p>Configura cobros, precios y apariencia.</p>
        </div>

        <div class="tabs-container fade-in">
            <button class="tab-btn @(tabActiva == 1 ? "active" : "")" @onclick="() => tabActiva = 1">
                <i class="fas fa-hand-holding-usd"></i> MERCADO PAGO
            </button>
            <button class="tab-btn @(tabActiva == 2 ? "active" : "")" @onclick="() => tabActiva = 2">
                <i class="fas fa-tag"></i> PRECIOS
            </button>
            <button class="tab-btn @(tabActiva == 3 ? "active" : "")" @onclick="() => tabActiva = 3">
                <i class="fas fa-image"></i> PERFIL
            </button>
        </div>

        <div class="cards-wrapper">

            @* TAB 1: MERCADO PAGO *@
            @if (tabActiva == 1)
            {
                <div class="mp-card text-center fade-in">
                    <img src="https://http2.mlstatic.com/frontend-assets/ui-navigation/5.19.1/mercadopago/logo__small.png" alt="Mercado Pago" width="100" class="mb-3" />

                    @if (datosBox.EstaVinculadoMP)
                    {
                        <div class="status-connected fade-in">
                            <i class="fas fa-check-circle fa-3x mb-2"></i>
                            <h4>¡CUENTA VINCULADA!</h4>
                            <p>Tu gimnasio ya está listo para recibir pagos.</p>
                        </div>

                        <button class="btn-mp-connect outline mt-3" @onclick="VincularMercadoPago">
                            Cambiar cuenta vinculada
                        </button>

                        <button class="btn-unlink mt-3" @onclick="DesvincularCuenta">
                            <i class="fas fa-trash-alt"></i> Desconectar Cuenta
                        </button>
                    }
                    else
                    {
                        <h5 class="section-title">RECIBIR PAGOS</h5>
                        <p class="text-muted small mb-4">
                            Para que los atletas te paguen directo a ti, conecta tu cuenta.
                        </p>

                        <div class="mp-status-box">
                            <i class="fas fa-exclamation-circle"></i>
                            <span>Estado: <strong>Sin conexión</strong></span>
                        </div>

                        <button class="btn-mp-connect mt-4" @onclick="VincularMercadoPago">
                            <b>CONECTAR CUENTA AHORA</b>
                        </button>

                        <p class="text-muted x-small mt-3">
                            Al hacer clic, serás redirigido a Mercado Pago.
                        </p>
                    }
                </div>
            }

            @* TAB 2: PRECIOS *@
            @if (tabActiva == 2)
            {
                <div class="prices-card text-center fade-in">
                    <h5 class="section-title">PRECIOS DE TU BOX</h5>
                    <p class="text-muted small">Define cuánto cobrará la App a tus atletas.</p>

                    <div class="form-group mt-3 text-start">
                        <label class="lbl-input">Mensualidad ($)</label>
                        <input type="number" @bind="datosBox.PrecioMensualidad" class="form-control input-dark" />
                    </div>

                    <div class="form-group mt-3 text-start">
                        <label class="lbl-input">Inscripción ($)</label>
                        <input type="number" @bind="datosBox.PrecioInscripcion" class="form-control input-dark" />
                        <small class="text-muted" style="font-size: 0.75rem;">Pon 0 si no cobras inscripción.</small>
                    </div>

                    <button class="btn-save mt-4" @onclick="GuardarPrecios" disabled="@guardando">
                        @if (guardando)
                        {
                            <span><i class="fas fa-spinner fa-spin"></i> GUARDANDO...</span>
                        }
                        else
                        {
                            <span><i class="fas fa-save"></i> GUARDAR CAMBIOS</span>
                        }
                    </button>
                </div>
            }

            @* TAB 3: PERFIL (LOGO) - NUEVO *@
            @if (tabActiva == 3)
            {
                <div class="prices-card text-center fade-in">
                    <h5 class="section-title">LOGO DEL BOX</h5>
                    <p class="text-muted small">Este logo aparecerá en el perfil de tus atletas.</p>

                    <div class="upload-area mt-4">
                        @if (archivoSeleccionado == null && string.IsNullOrEmpty(previewImagen) && datosBox.Logo == null)
                        {
                            <div class="upload-placeholder">
                                <i class="fas fa-cloud-upload-alt fa-3x"></i>
                                <p>Toca para subir imagen</p>
                            </div>
                        }
                        else
                        {
                            <div class="image-preview-container">
                                @if (!string.IsNullOrEmpty(previewImagen))
                                {
                                    <img src="@previewImagen" class="img-fluid rounded" />
                                }
                                else if (datosBox.Logo != null)
                                {
                                    <img src="@ObtenerUrlLogo(datosBox.Logo.Value)" class="img-fluid rounded" />
                                }
                            </div>
                        }
                        
                        @* INPUT FILE INVISIBLE PERO FUNCIONAL *@
                        <InputFile OnChange="ProcesarSeleccionImagen" class="file-input-hidden" accept="image/*" />
                    </div>

                    @if (archivoSeleccionado != null)
                    {
                        <div class="alert alert-warning mt-3 p-2" style="font-size: 0.8rem; border-radius: 8px;">
                            Imagen seleccionada: @archivoSeleccionado.Name
                        </div>

                        <button class="btn-save mt-3" @onclick="SubirImagenAlServidor" disabled="@subiendoImagen">
                            @if (subiendoImagen)
                            {
                                <span><i class="fas fa-spinner fa-spin"></i> SUBIENDO...</span>
                            }
                            else
                            {
                                <span><i class="fas fa-upload"></i> ACTUALIZAR LOGO</span>
                            }
                        </button>
                    }
                    else
                    {
                        <div class="mt-3 text-muted" style="font-size:0.7rem">
                            Recomendado: Imagen cuadrada (500x500px)<br>Formatos: JPG, PNG
                        </div>
                    }
                </div>
            }

        </div>
        
        <div style="height: 40px;"></div>
    </div>
</div>

