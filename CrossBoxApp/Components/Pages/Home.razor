@page "/home"
@using System.Net.Http.Json
@inject NavigationManager Nav
@inject HttpClient Http
@inject CrossBoxApp.Models.Services.SesionService Sesion
@using CrossBoxApp.Models

<div class="top-navbar">
    <div class="brand">ALFAFIT</div>
    @if (Sesion.Usuario != null && Sesion.Usuario.TipoUsuarioID == 1)
    {
        <div class="menu-items">
            <span @onclick="AbrirModalWod" class="menu-link">
                <i class="fas fa-hammer"></i> WOD
            </span>

            <span class="menu-link" style="color:#d9534f">
                <i class="fas fa-stopwatch"></i> LIVE
            </span>

            <div class="dropdown-wrapper">
                <span class="menu-link" @onclick="ToggleConfigMenu">
                    <i class="fas fa-cog"></i> MY BOX <i class="fas fa-caret-down" style="font-size:0.8rem;"></i>
                </span>

                @if (mostrarConfigMenu)
                {
                    <div class="dropdown-content">
                        <div class="dropdown-item" @onclick='() => NavegarA("test")'>
                            <i class="fas fa-flask"></i> Test
                        </div>
                        <div class="dropdown-item" @onclick='() => NavegarA("usuarios")'>
                            <i class="fas fa-users"></i> Usuarios
                        </div>
                        <div class="dropdown-item" @onclick='() => NavegarA("avisos")'>
                            <i class="fas fa-bullhorn"></i> Avisos
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    <div class="user-info" @onclick="IrAPerfil" style="cursor: pointer;">
        Hola, @(Sesion.Usuario?.Nombre ?? "ATLETA")
        <i class="fas fa-user-circle" style="margin-left: 5px; color: #F8C545;"></i>
    </div>
</div>

<div class="home-container">
    <div class="welcome-section">
        <h1>BIENVENIDO @(Sesion.Usuario?.Nombre?.ToUpper() ?? "ATLETA")</h1>
    </div>

    <div class="cards-grid">
        <div class="menu-card" @onclick="IrAAgenda">
            <i class="fas fa-dumbbell card-icon"></i>
            <h3>AGENDA TU CLASE</h3>
            <p>Elige tu horario...</p>
        </div>

        <div class="menu-card" @onclick="IrAWodView"> <i class="fas fa-chalkboard-teacher card-icon"></i>
        <h3>WOD</h3>
        <p>@DateTime.Now.ToString("dd/MM/yyyy")</p>
        </div>

       <div class="menu-card" @onclick="IrAProgreso"> <i class="fas fa-clipboard-list card-icon"></i>
             <h3>PROGRESO</h3>
                <p>Consulta tus datos de las<br>evaluaciones previas y actual</p>
        </div>
    </div>

    <div class="footer-brand">@@ALFAFIT</div>
</div>

@if (mostrarModalWod)
{
    <div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.9); z-index: 1000;" tabindex="-1">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content" style="background-color: #222; border: 1px solid #F8C545; color: white;">

                <div class="modal-header">
                    <h5 class="modal-title" style="color: #F8C545;">Programación de la Clase (WOD)</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="() => mostrarModalWod = false"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label style="color:#F8C545; font-weight:bold;">Fecha de Programación:</label>
                        <input type="date" @bind="nuevoWod.FechaProgramacion" class="form-control input-dark" />
                    </div>

                    @for (int i = 0; i < nuevoWod.Bloques.Count; i++)
                    {
                        var indexBloque = i; // Variable local para el closure
                        var bloque = nuevoWod.Bloques[i];

                        <div class="card p-2 mb-3" style="background-color: #333; border: 1px solid #F8C545;">

                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span style="color:#F8C545; font-weight:bold;">BLOQUE #@(indexBloque + 1)</span>
                                <button class="btn btn-sm btn-danger" @onclick="() => EliminarBloque(bloque)">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>

                            <select @bind="bloque.SegmentoClaseID" class="form-control input-dark mb-2">
                                <option value="">-- Selecciona Segmento --</option>
                                @foreach (var seg in listaSegmentos)
                                {
                                    <option value="@seg.Id">@seg.Nombre</option>
                                }
                            </select>

                            @foreach (var ejercicio in bloque.Ejercicios)
                            {
                                <div class="input-group mb-2">
                                    <input type="text" @bind="ejercicio.PesoRepeticiones" class="form-control input-dark" placeholder="Peso/Reps" style="width: 30%;" />
                                    <input type="text" @bind="ejercicio.Descripcion" class="form-control input-dark" placeholder="Descripción" />
                                    <button class="btn btn-outline-danger" @onclick="() => EliminarEjercicio(bloque, ejercicio)">X</button>
                                </div>
                            }

                            <button class="btn btn-sm btn-outline-light w-100" @onclick="() => AgregarEjercicio(bloque)">
                                <i class="fas fa-dumbbell"></i> + Ejercicio
                            </button>
                        </div>
                    }

                    <button class="btn btn-outline-warning w-100 py-2" @onclick="AgregarBloque">
                        <i class="fas fa-plus"></i> Agregar Nuevo Bloque
                    </button>

                </div>

                <div class="modal-footer justify-content-between">
                    <button class="btn btn-secondary" @onclick="() => mostrarModalWod = false">Cerrar</button>
                    <button class="btn btn-warning" style="background-color:#F8C545; font-weight:bold;" @onclick="GuardarProgramacion">
                        Guardar Programación
                    </button>
                </div>
            </div>
        </div>
    </div>
}

