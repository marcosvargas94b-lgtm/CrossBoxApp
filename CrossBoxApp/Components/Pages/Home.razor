@code {
   private void IrAWodView()
    {
        Nav.NavigateTo("/wod-view");
    }

    private void IrAAgenda()
    {
        Nav.NavigateTo("/agenda-view");
    }
    private void IrAProgreso()
    {
        Nav.NavigateTo("/progreso-view");
    }

    private void IrAPerfil()
    {
        Nav.NavigateTo("/mi-perfil");
    }
    private bool mostrarModalWod = false;

    // Datos para el WOD
    private ProgramacionWodViewModel nuevoWod = new ProgramacionWodViewModel();
    private List<SegmentoDto> listaSegmentos = new List<SegmentoDto>();

    // Variable para el toggle del menú
    private bool mostrarConfigMenu = false;

    private void ToggleConfigMenu()
    {
        mostrarConfigMenu = !mostrarConfigMenu;
    }

    private void NavegarA(string destino)
    {
        mostrarConfigMenu = false; // Cerramos el menú al seleccionar
        
        switch (destino)
        {
            case "test":
                Nav.NavigateTo("/test-config"); 
                break;
           
            case "usuarios":
                Nav.NavigateTo("/usuarios-view");
                break;
            case "avisos":
                // Nav.NavigateTo("/avisos-view");
                App.Current.MainPage.DisplayAlert("Navegación", "Ir a pantalla Avisos", "OK");
                break;
        }
    }



    // Inicialización
    protected override async Task OnInitializedAsync()
    {
        if (Sesion.Usuario == null)
        {
            // Si se perdió la sesión, mandamos al Login
            Nav.NavigateTo("/");
            return;
        }
        // Cargar los segmentos desde la API al iniciar
        try
        {
            var response = await Http.GetAsync("https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/wodapi/segmentos");
            if (response.IsSuccessStatusCode)
            {
                listaSegmentos = await response.Content.ReadFromJsonAsync<List<SegmentoDto>>();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error cargando segmentos: " + ex.Message);
        }
    }

    // --- LÓGICA DEL MODAL ---

    private void AbrirModalWod()
    {
        // Reiniciar el modelo o cargar uno existente
        if (nuevoWod.Bloques.Count == 0)
        {
            AgregarBloque(); // Agregar uno por defecto para empezar
        }
        mostrarModalWod = true;
    }

    private void AgregarBloque()
    {
        var bloque = new BloqueWodViewModel();
        bloque.Ejercicios.Add(new EjercicioViewModel()); // Agregar un ejercicio vacío
        nuevoWod.Bloques.Add(bloque);
    }

    private void EliminarBloque(BloqueWodViewModel bloque)
    {
        nuevoWod.Bloques.Remove(bloque);
    }

    private void AgregarEjercicio(BloqueWodViewModel bloque)
    {
        bloque.Ejercicios.Add(new EjercicioViewModel());
    }

    private void EliminarEjercicio(BloqueWodViewModel bloque, EjercicioViewModel ejercicio)
    {
        bloque.Ejercicios.Remove(ejercicio);
    }

    private async Task GuardarProgramacion()
    {
      
        try
        {
            if (Sesion.Usuario != null)
            {
                nuevoWod.BoxID = Sesion.Usuario.BoxID;
            }
            else
            {                
                await App.Current.MainPage.DisplayAlert("Error", "Sesión no válida. Vuelve a iniciar sesión.", "OK");
                Nav.NavigateTo("/");
                return;
            }

            var response = await Http.PostAsJsonAsync("https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/wodapi/guardar", nuevoWod);

            if (response.IsSuccessStatusCode)
            {
                await App.Current.MainPage.DisplayAlert("Éxito", "WOD Guardado correctamente", "OK");
                mostrarModalWod = false;
                nuevoWod = new ProgramacionWodViewModel();
            }
            else
            {
                await App.Current.MainPage.DisplayAlert("Error", "No se pudo guardar", "OK");
            }
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error", ex.Message, "OK");
        }
    }
}