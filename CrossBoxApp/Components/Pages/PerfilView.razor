@code {
    private PerfilDto miPerfil = new PerfilDto();
    private string previewImagen = "";
    private IBrowserFile archivoSeleccionado;
    private bool guardando = false;
    private bool esEdicion = false; // Variable para saber si estamos editando o creando

    protected override async Task OnInitializedAsync()
    {
        if (Sesion.Usuario == null) { Nav.NavigateTo("/"); return; }

        await CargarPerfilExistente();
    }

 private async Task SeleccionarFotoNativa()
{
    // 1. Verificación de permisos (Solo para Móviles)
    // En Windows esto no es necesario y a veces causa ruido
    if (DeviceInfo.Platform != DevicePlatform.WinUI)
    {
        if (!await VerificarPermisosGaleria()) return;
    }

    try
    {
        // 2. CONFIGURACIÓN
        var opciones = new PickOptions
        {
            PickerTitle = "Selecciona una imagen",
            FileTypes = FilePickerFileType.Images
        };

        FileResult resultado = null;

        // 3. SELECCIÓN (Separamos lógica Windows vs Móvil)
        if (DeviceInfo.Platform == DevicePlatform.WinUI)
        {
            // EN WINDOWS: Llamamos directo (sin MainThread) y atrapamos el error COM
            // para que no te cierre la app si estás en modo Administrador.
            try 
            {
                resultado = await FilePicker.Default.PickAsync(opciones);
            }
            catch (System.Runtime.InteropServices.COMException) 
            {
                await App.Current.MainPage.DisplayAlert("Aviso Windows", 
                    "No se pudo abrir el selector. Si estás ejecutando Visual Studio como Administrador, ciérralo y ábrelo normal.", "OK");
                return;
            }
        }
        else
        {
            // EN MÓVIL (Android/iOS): A veces ayuda forzar el hilo principal
            resultado = await FilePicker.Default.PickAsync(opciones);
        }

        // 4. PROCESAMIENTO (Igual para todos)
        if (resultado != null)
        {
            using var stream = await resultado.OpenReadAsync();
            var memoryStream = new MemoryStream();
            await stream.CopyToAsync(memoryStream);
            memoryStream.Position = 0;

            var buffer = memoryStream.ToArray();
            previewImagen = $"data:image/png;base64,{Convert.ToBase64String(buffer)}";
            
            // Guardamos la referencia
            archivoSeleccionadoNativo = resultado; 
        }
    }
    catch (Exception ex)
    {
        await App.Current.MainPage.DisplayAlert("Error", "Ocurrió un problema: " + ex.Message, "OK");
    }
}

    // Variable global nueva
    private FileResult archivoSeleccionadoNativo;
    private async Task<bool> VerificarPermisosGaleria()
    {
        // 1. Verificamos el estado actual
        var estado = await Permissions.CheckStatusAsync<Permissions.Photos>();

        // 2. Si no tenemos permiso, lo pedimos
        if (estado != PermissionStatus.Granted)
        {
            estado = await Permissions.RequestAsync<Permissions.Photos>();
        }

        // 3. Si el usuario dijo que NO
        if (estado != PermissionStatus.Granted)
        {
            await App.Current.MainPage.DisplayAlert("Permiso Requerido", "Necesitamos acceso a tus fotos para subir tu evidencia.", "Entendido");
            return false;
        }

        return true;
    }


    private async Task CargarPerfilExistente()
    {
        try
        {
            var userId = Sesion.Usuario.UsuarioID;
            // Llamamos al endpoint GET que creamos en la API
            var response = await Http.GetAsync($"https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/PerfilApi/obtener/{userId}");

            if (response.IsSuccessStatusCode)
            {
                // Si responde 200 OK, es que SÍ tiene datos
                var perfilEncontrado = await response.Content.ReadFromJsonAsync<PerfilDto>();

                if (perfilEncontrado != null)
                {
                    miPerfil = perfilEncontrado;
                    esEdicion = true; // Cambiamos el estado a "Edición"

                    // Si la API nos devolvió una URL de foto, la ponemos en el preview
                    if (!string.IsNullOrEmpty(miPerfil.FotoPerfil))
                    {
                        previewImagen = miPerfil.FotoPerfil;
                    }
                }
            }
            else
            {
                // Si responde 404 NotFound, no hacemos nada (se queda vacío para crear)
                esEdicion = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error al cargar perfil: " + ex.Message);
        }
    }

    private async Task CargarImagen(InputFileChangeEventArgs e)
    {
        var archivo = e.File;
        if (archivo != null)
        {
            archivoSeleccionado = archivo;

            // Crear preview local para que el usuario vea la foto al instante
            var format = "image/png";
            var resizedImage = await archivo.RequestImageFileAsync(format, 300, 300);
            var buffer = new byte[resizedImage.Size];
            await resizedImage.OpenReadStream().ReadAsync(buffer);
            previewImagen = $"data:{format};base64,{Convert.ToBase64String(buffer)}";
        }
    }

    private async Task GuardarPerfil()
    {
        guardando = true;
        try
        {
            var contenido = new MultipartFormDataContent();
            contenido.Add(new StringContent(Sesion.Usuario.UsuarioID.ToString()), "UsuarioID");
            contenido.Add(new StringContent(miPerfil.Descripcion ?? ""), "Descripcion");
            contenido.Add(new StringContent(miPerfil.Whatsapp ?? ""), "Whatsapp");

        if (archivoSeleccionadoNativo != null)
    {
        using var stream = await archivoSeleccionadoNativo.OpenReadAsync();
        var fileContent = new StreamContent(stream);
        fileContent.Headers.ContentType = new MediaTypeHeaderValue(archivoSeleccionadoNativo.ContentType);
        contenido.Add(fileContent, "archivoFoto", archivoSeleccionadoNativo.FileName);
    }

            var response = await Http.PostAsync("https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/PerfilApi/guardar", contenido);

            if (response.IsSuccessStatusCode)
            {
                await App.Current.MainPage.DisplayAlert("¡Listo!", "Tu perfil ha sido actualizado.", "OK");
                // Recargamos para asegurar que todo esté fresco
                await CargarPerfilExistente();
            }
            else
            {
                await App.Current.MainPage.DisplayAlert("Error", "No se pudo guardar.", "OK");
            }
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error", ex.Message, "OK");
        }
        finally
        {
            guardando = false;
        }
    }

    private void Volver() => Nav.NavigateTo("/home");
}
