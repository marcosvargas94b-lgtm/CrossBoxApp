@page "/mi-perfil"
@using CrossBoxApp.Models
@using CrossBoxApp.Models.Services
@using System.Net.Http.Headers
@inject NavigationManager Nav
@inject HttpClient Http
@inject SesionService Sesion

<div class="top-navbar">
    <div class="nav-left" @onclick="Volver"><i class="fas fa-arrow-left"></i> VOLVER</div>
    <div class="nav-title">MI PERFIL</div>
    <div class="nav-right"></div>
</div>

<div class="profile-container">

    <div class="photo-section">
        <div class="image-wrapper">
            @if (!string.IsNullOrEmpty(previewImagen))
            {
                <img src="@previewImagen" class="profile-img" />
            }
            else
            {
                <img src="https://via.placeholder.com/150/000000/F8C545?text=ALFA" class="profile-img" />
            }
            <label class="upload-btn" @onclick="SeleccionarFotoNativa">
    <i class="fas fa-camera"></i>
</label>
@* 
            <label class="upload-btn">
                <InputFile OnChange="CargarImagen" accept=".jpg,.jpeg,.png" style="display:none;" />
                <i class="fas fa-camera"></i>
            </label> *@
        </div>
        <p class="username">@(Sesion.Usuario?.Nombre + " " + Sesion.Usuario?.Apellidos ?? "ATLETA")</p>
    </div>

    <div class="form-section">

        <label>Acerca de mí (Descripción)</label>
        <textarea @bind="miPerfil.Descripcion" class="input-dark text-area" placeholder="Ej: Amante del Crossfit, RX en proceso..."></textarea>

        <label>WhatsApp de Contacto</label>

        <div class="wrapper-ws">
            <i class="fab fa-whatsapp icono-ws"></i>

            <input type="text"
                   @bind="miPerfil.Whatsapp"
                   class="input-dark input-con-icono"
                   placeholder="Ej: 961 123 4567" />
        </div>

        <button class="btn-save" @onclick="GuardarPerfil" disabled="@guardando">
            @if (guardando)
            {
                <span>GUARDANDO...</span>
            }
            else if (esEdicion)
            {
                <span><i class="fas fa-edit"></i> ACTUALIZAR DATOS</span>
            }
            else
            {
                <span>GUARDAR PERFIL</span>
            }
        </button>

    </div>
</div>

