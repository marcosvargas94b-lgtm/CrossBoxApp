            .panel.collapsed .panel-content, .panel.collapsed .panel-header .header-left, .panel.collapsed .panel-header span, .panel.collapsed .panel-header .header-select-wrapper, .panel.collapsed .panel-header .btn-icon-header {
                display: none;
                opacity: 0;
            }

    .panel-header {
        height: 50px;
        background: #1a1a1a;
        border-bottom: 2px solid #F8C545;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 15px;
        font-family: 'Oswald';
        font-size: 1.1rem;
        color: #F8C545;
        white-space: nowrap;
        flex-shrink: 0;
        z-index: 2;
        position: relative;
    }

    .panel-content {
        flex: 1;
        padding: 15px;
        overflow-y: auto;
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
    }

    .btn-icon-header {
        background: none;
        border: none;
        color: #888;
        font-size: 1rem;
        cursor: pointer;
    }

