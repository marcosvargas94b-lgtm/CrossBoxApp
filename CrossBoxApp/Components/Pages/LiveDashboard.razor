        }

        .btn-control-rect.stop {
            background: #dc3545;
            color: white;
        }

        .btn-control-rect.reset {
            background: #333;
            color: white;
            border: 1px solid #444;
        }

    /* BOTÓN ELIMINAR EN TARJETA */
