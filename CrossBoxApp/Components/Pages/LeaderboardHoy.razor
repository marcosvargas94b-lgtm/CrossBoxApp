@page "/leaderboard-hoy"
@using CrossBoxApp.Models.Services
@inject HttpClient Http
@inject NavigationManager Nav
@inject SesionService Sesion

<div class="main-layout">

    <div class="navbar-container">
        <div class="nav-left" @onclick="Volver">
            <i class="fas fa-arrow-left"></i> VOLVER
        </div>
        <div class="nav-title">LEADERBOARD DIARIO</div>
        <div class="nav-right"></div>
    </div>

    <div class="scrollable-content">

        <div class="date-header">
            @DateTime.Now.ToString("dddd, dd MMMM").ToUpper()
        </div>

        @* --- SELECTOR DE PESTAÑAS --- *@
        <div class="filter-tabs fade-in">
            <button class="tab-btn @(tabActiva == "REPS" ? "active" : "")" @onclick='() => CambiarTab("REPS")'>
                <i class="fas fa-redo-alt"></i> REPS
            </button>
            <button class="tab-btn @(tabActiva == "TIEMPO" ? "active" : "")" @onclick='() => CambiarTab("TIEMPO")'>
                <i class="fas fa-stopwatch"></i> TIEMPO
            </button>
        </div>

        @if (cargando)
        {
            <div class="text-center mt-5">
                <div class="spinner-border text-warning" role="status"></div>
                <p class="mt-2 text-muted">Cargando @(tabActiva == "REPS" ? "repeticiones" : "tiempos")...</p>
            </div>
        }
        else if (listaActual == null || listaActual.Count == 0)
        {
            <div class="empty-state fade-in">
                <i class="fas fa-dumbbell" style="opacity: 0.3; font-size: 3rem; margin-bottom: 15px;"></i>
                <h3>SIN RESULTADOS</h3>
                <p>Aún no hay registros de @(tabActiva == "REPS" ? "AMRAP" : "WOD") para hoy.</p>
            </div>
        }
        else
        {
            <div class="podium-list fade-in">
                @foreach (var item in listaActual)
                {
                    <div class="score-row @(item.Posicion == 1 ? "gold" : "") @(item.EsEquipo ? "team-border" : "")">

                        @* 1. POSICIÓN *@
                        <div class="pos-column">
                            @if (item.Posicion == 1)
                            {
                                <i class="fas fa-crown gold-icon"></i>
                            }
                            else if (item.Posicion == 2)
                            {

                                <i class="fas fa-medal silver-icon"></i>
                            }
                            else if (item.Posicion == 3)
                            {

                                <i class="fas fa-medal bronze-icon"></i>
                            }
                            else
                            {

                                <span>@item.Posicion</span>
                            }
                        </div>

                        @* 2. AVATAR *@
                        <div class="avatar-column">
                            @if (!string.IsNullOrEmpty(item.Foto))
                            {
                                <img src="@item.Foto" class="score-avatar" />
                            }
                            else
                            {
                                <div class="score-placeholder">
                                    @(item.EsEquipo ? "T" : item.Nombre.Substring(0, 1).ToUpper())
                                </div>
                            }
                        </div>

                        @* 3. NOMBRE *@
                        <div class="name-column">
                            <span class="name-text">@item.Nombre</span>
                            @if (item.EsEquipo)
                            {
                                <span class="team-badge">EQUIPO</span>
                            }
                        </div>

                        @* 4. RESULTADO (DINÁMICO) *@
                        <div class="reps-column">
                            @if (tabActiva == "REPS")
                            {
                                <span class="reps-val">@item.Reps</span>
                                <small>REPS</small>
                            }
                            else
                            {
                                <span class="reps-val">@item.Tiempo</span>
                                <small>TIME</small>
                            }
                        </div>
                    </div>
                }
            </div>
        }

        <div style="height: 40px;"></div>
    </div>
</div>

