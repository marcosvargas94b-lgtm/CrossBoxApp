@code {
    private string tabActiva = "REPS";
    private bool cargando = true;
    private List<LeaderboardItem> listaActual = new();

    public class LeaderboardItem
    {
        public string Nombre { get; set; }
        public int Reps { get; set; }
        public string Tiempo { get; set; }
        public int Posicion { get; set; }
        public string Foto { get; set; }
        public bool EsEquipo { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        if (Sesion.Usuario == null) { Nav.NavigateTo("/"); return; }
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;
        listaActual = new(); // Limpiar lista anterior
        try
        {
            string endpoint = tabActiva == "REPS" ? "leaderboard-hoy" : "leaderboard-tiempo-hoy";
            var url = $"https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/scoresapi/{endpoint}/{Sesion.Usuario.BoxID}";

            var res = await Http.GetFromJsonAsync<List<LeaderboardItem>>(url);
            if (res != null)
            {
                listaActual = res;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error cargando leaderboard: {ex.Message}");
            listaActual = new List<LeaderboardItem>();
        }
        finally
        {
            cargando = false;
            StateHasChanged();
        }
    }

    private async Task CambiarTab(string tab)
    {
        if (tabActiva == tab) return;
        tabActiva = tab;
        await CargarDatos();
    }

    private void Volver() => Nav.NavigateTo("/home");
}