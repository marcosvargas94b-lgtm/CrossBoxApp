@page "/wod-view"
@using CrossBoxApp.Models
@using CrossBoxApp.Models.Services
@inject NavigationManager Nav
@inject HttpClient Http
@inject SesionService Sesion

<div class="top-navbar">
    <div class="nav-left" @onclick="Volver">
        <i class="fas fa-arrow-left"></i> VOLVER
    </div>
    <div class="nav-title">WOD DEL DÍA</div>
    <div class="nav-right"></div> </div>

<div class="wod-container">
    
    <h2 class="date-header">@DateTime.Now.ToString("dddd, dd MMMM").ToUpper()</h2>

    @if (cargando)
    {
            <div class="loading-state">
                <div class="spinner-border text-warning" role="status"></div>
                <p>Cargando entrenamiento...</p>
            </div>
    }
    else if (wodData == null || wodData.Segmentos.Count == 0)
    {
            <div class="empty-state">
                <i class="fas fa-bed"></i>
                <h3>DÍA DE DESCANSO</h3>
                <p>No hay programación cargada para hoy en @(Sesion.Usuario?.BoxNombre ?? "tu Box").</p>
            </div>
    }
    else
    {
            @foreach (var segmento in wodData.Segmentos)
            {
                    <div class="segment-card">
                        <div class="segment-header">
                            @segmento.Titulo.ToUpper()
                        </div>

                <div class="segment-body">
                    @foreach (var ejercicio in segmento.Ejercicios)
                    {
                        <div class="exercise-row-unified">

                            <span class="text-desc">
                                @ejercicio.Descripcion
                            </span>

                            @if (!string.IsNullOrEmpty(ejercicio.PesoRepeticiones))
                            {
                                <span class="text-reps">
                                    - @ejercicio.PesoRepeticiones
                                </span>
                            }

                        </div>
                    }
                </div>
                    </div>
            }

        @if (Sesion.Usuario != null && Sesion.Usuario.TipoUsuarioID == 1 || Sesion.Usuario.TipoUsuarioID == 3)
        {
            <div class="admin-actions mt-4 mb-4">
                <button class="btn btn-danger w-100" @onclick="EliminarWodActual">
                    <i class="fas fa-trash-alt"></i> ELIMINAR WOD DEL DÍA
                </button>
            </div>
        }


    }

 
</div>

<style>
    /* Navbar */
    .top-navbar {
        display: flex; justify-content: space-between; align-items: center;
        padding: 15px; background-color: #1a1a1a; border-bottom: 2px solid #F8C545;
        color: white; font-family: 'Oswald', sans-serif;
        position: sticky; top: 0; z-index: 100;
    }
    .nav-left { color: #F8C545; font-size: 0.9rem; cursor: pointer; display: flex; align-items: center; gap: 5px; }
    .nav-title { font-size: 1.2rem; letter-spacing: 1px; }
    .nav-right { width: 60px; }

    /* Contenedor General */
    .wod-container {
        padding: 20px; background-color: #0d0d0d; min-height: 100vh; color: white;
    }

    /* Fecha */
    .date-header {
        font-family: 'Oswald'; font-size: 1.5rem; text-align: center; color: white;
        margin-bottom: 25px; border-bottom: 1px solid #333; padding-bottom: 10px;
    }

    /* Tarjeta de Segmento */
    .segment-card {
        background-color: #1a1a1a; border: 1px solid #333; border-radius: 8px;
        margin-bottom: 25px; overflow: hidden;
    }
    
    .segment-header {
        background-color: #F8C545; color: #0d0d0d; font-family: 'Oswald';
        font-size: 1.1rem; font-weight: bold; padding: 8px 15px;
        letter-spacing: 1px;
    }

    .segment-body { padding: 10px 15px; }

    /* Filas de Ejercicios */
    .exercise-row-unified {
    padding: 12px 0;
    border-bottom: 1px solid #333;
    /* Asegura que el texto fluya normalmente y no se corte */
    white-space: normal; 
    word-wrap: break-word;
    line-height: 1.4; /* Mejor lectura si ocupa dos líneas */
}
.exercise-row-unified:last-child { border-bottom: none; }

/* Estilo para la descripción (Blanco) */
.text-desc {
    font-family: 'Roboto', sans-serif;
    font-size: 1rem;
    color: #eee;
}

/* Estilo para el guión y el peso (Amarillo y negrita) */
.text-reps {
    font-family: 'Oswald', sans-serif;
    font-size: 1.05rem;
    color: #F8C545;
    font-weight: bold;
    /* Un pequeño margen a la izquierda del guión por si acaso */
    margin-left: 4px; 
}

    /* Estados de Carga/Vacío */
    .loading-state, .empty-state {
        text-align: center; margin-top: 50px; color: #666; font-family: 'Roboto';
    }
    .empty-state i { font-size: 3rem; margin-bottom: 15px; color: #333; }
</style>

@code {
    private WodDiaDto wodData;
    private bool cargando = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // 1. Validar sesión
            if (Sesion.Usuario == null)
            {
                // Si no hay usuario, devolver al login (o recargar sesión guardada)
                Nav.NavigateTo("/");
                return;
            }

            var boxId = Sesion.Usuario.BoxID;

            // 2. Llamar a la API
            // Nota: Asegúrate de que tu API esté corriendo y la URL Base en MauiProgram.cs sea correcta
            var response = await Http.GetAsync($"https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/wodapi/obtener-hoy/{boxId}");

            if (response.IsSuccessStatusCode)
            {
                wodData = await response.Content.ReadFromJsonAsync<WodDiaDto>();
            }
            else
            {
                // Si la API devuelve 404, significa que no hay WOD, dejamos wodData en null
                wodData = null;
            }
        }
        catch (Exception ex)
        {
            // En desarrollo, puedes mostrar el error para debuggear
            Console.WriteLine($"Error obteniendo WOD: {ex.Message}");
            await App.Current.MainPage.DisplayAlert("Error", "No se pudo cargar el WOD. Revisa tu conexión.", "OK");
        }
        finally
        {
            cargando = false;
        }
    }


    private async Task EliminarWodActual()
    {
        bool confirmar = await App.Current.MainPage.DisplayAlert("PELIGRO",
            "¿Estás seguro de eliminar TODA la programación de hoy? Esto no se puede deshacer.",
            "Sí, Eliminar", "Cancelar");

        if (!confirmar) return;

        try
        {
            var boxId = Sesion.Usuario.BoxID;
            // Formato seguro para URL: yyyy-MM-dd
            var fechaStr = DateTime.Now.ToString("yyyy-MM-dd");

            var response = await Http.DeleteAsync($"https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/wodapi/eliminar-dia/{boxId}/{fechaStr}");

            if (response.IsSuccessStatusCode)
            {
                await App.Current.MainPage.DisplayAlert("Éxito", "WOD Eliminado.", "OK");
                // Recargamos la página para que salga la pantalla de "Día de Descanso"
                wodData = null;
                await OnInitializedAsync();
            }
            else
            {
                await App.Current.MainPage.DisplayAlert("Error", "No se pudo eliminar.", "OK");
            }
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error", ex.Message, "OK");
        }
    }

    private void Volver()
    {
        Nav.NavigateTo("/home");
    }
}