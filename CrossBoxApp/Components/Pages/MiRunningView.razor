@page "/mi-running"
@using CrossBoxApp.Models
@using CrossBoxApp.Models.Services
@inject NavigationManager Nav
@inject HttpClient Http
@inject SesionService Sesion

<div class="top-navbar">
    <div class="nav-left" @onclick="Volver"><i class="fas fa-arrow-left"></i> VOLVER</div>
    <div class="nav-title">MI BITÁCORA</div>
    <div class="nav-right"></div>
</div>

<div class="running-container">

    <div class="month-control">
        <button class="btn-nav" @onclick="MesAnterior"><i class="fas fa-chevron-left"></i></button>
        <span class="month-label">@fechaActual.ToString("MMMM yyyy").ToUpper()</span>
        <button class="btn-nav" @onclick="MesSiguiente"><i class="fas fa-chevron-right"></i></button>
    </div>

    <div class="calendar-grid">
        <div class="day-name">DOM</div> <div class="day-name">LUN</div> <div class="day-name">MAR</div>
        <div class="day-name">MIE</div> <div class="day-name">JUE</div> <div class="day-name">VIE</div>
        <div class="day-name">SAB</div>

        @for (int i = 0; i < diasVaciosInicio; i++)
        {
            <div class="calendar-day empty"></div>
        }

        @for (int dia = 1; dia <= diasEnMes; dia++)
        {
            int diaActual = dia;
            var log = ObtenerLog(diaActual);
            bool hayPlan = log != null;
            bool estaHecho = hayPlan && (log.Realizado == true);

            // Color base del plan (Gris si no se ha hecho, Verde brillante si ya)
            string colorIcono = estaHecho ? "#00FF00" : (hayPlan ? ObtenerColorTipo(log.Tipo) : "#333");

            <div class="calendar-day"
                 style="border-color: @(hayPlan? ObtenerColorTipo(log.Tipo) : "#333"); opacity: @(hayPlan ? 1 : 0.5)"
                 @onclick="() => AbrirModal(diaActual)">

                <span class="day-number">@dia</span>

                @if (hayPlan)
                {
                    <div class="day-content">
                        <i class="fas fa-running running-icon" style="color: @colorIcono"></i>
                        <span class="day-status">@(estaHecho ? "✔ HECHO" : log.Tipo)</span>
                    </div>
                }
            </div>
        }
    </div>
</div>

@if (mostrarModal && logSeleccionado != null)
{
    <div class="modal-overlay">
        <div class="modal-content">
            <div class="modal-header" style="background: @ObtenerColorTipo(logSeleccionado.Tipo)">
                <h5 style="color:black; font-weight:bold;">@fechaSeleccionada.ToString("dd MMMM") - @logSeleccionado.Tipo</h5>
                <button class="btn-close-custom" @onclick="CerrarModal"><i class="fas fa-times" style="color:black"></i></button>
            </div>

            <div class="modal-body scrollable">
                <div class="coach-section">
                    <label>📝 PLAN:</label>
                    <div class="plan-title">@logSeleccionado.Titulo</div>
                    <div class="plan-desc">@logSeleccionado.Descripcion</div>
                </div>

                <hr class="divider" />

                <label>✅ ¿LO HICISTE?</label>
                <div class="switch-container" @onclick="ToggleRealizado">
                    <div class="switch-track @(logSeleccionado.Realizado == true ? "on" : "off")">
                        <div class="switch-thumb"></div>
                    </div>
                    <span class="switch-label">@(logSeleccionado.Realizado == true ? "¡SÍ, ENTRENAMIENTO COMPLETADO!" : "NO REALIZADO")</span>
                </div>

                @if (logSeleccionado.Realizado == true)
                {
                    <label class="mt-4">🔥 ESCALA DE ESFUERZO (RPE 1-10)</label>
                    <p class="rpe-helper">1 = Muy Suave | 10 = Máximo Esfuerzo</p>

                    <div class="rpe-grid">
                        @for (int i = 1; i <= 10; i++)
                        {
                            int val = i;
                            <div class="rpe-item @(logSeleccionado.RPE == val ? "selected" : "")"
                                 style="background: @ObtenerColorRPE(val)"
                                 @onclick="() => SeleccionarRPE(val)">
                                @val
                            </div>
                        }
                    </div>

                    <label class="mt-3">💬 SENSACIONES / COMENTARIOS:</label>
                    <textarea @bind="logSeleccionado.ComentariosAtleta" class="form-control input-dark" rows="3" placeholder="¿Cómo te sentiste? ¿Dolor? ¿Ritmo?"></textarea>
                }
            </div>

            <div class="modal-footer">
                <button class="btn-cancel" @onclick="CerrarModal">Cerrar</button>
                <button class="btn-confirm" @onclick="GuardarFeedback">GUARDAR MI REPORTE</button>
            </div>
        </div>
    </div>
}

