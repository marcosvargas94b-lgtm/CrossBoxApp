@code {
    [Parameter] public Guid TargetUserId { get; set; }
    [Parameter] public string NombreAtleta { get; set; }

    private DateTime fechaActual = DateTime.Today;
    private List<RunningLogs> logsDelMes = new List<RunningLogs>();
    private int diasEnMes;
    private int diasVaciosInicio;

    private bool mostrarModal = false;
    private RunningLogs logEditando = new RunningLogs();
    private DateTime fechaSeleccionada;

    class TipoEntreno { public string Nombre { get; set; } public string Color { get; set; } }

    private List<TipoEntreno> TiposEntreno = new List<TipoEntreno>
    {
        new TipoEntreno { Nombre = "Acumulativo", Color = "#00BFFF" },
        new TipoEntreno { Nombre = "Intensidad", Color = "#FF4500" },
        new TipoEntreno { Nombre = "Tempo", Color = "#FF8C00" },
        new TipoEntreno { Nombre = "Cuestas", Color = "#9370DB" },
        new TipoEntreno { Nombre = "Fuerza", Color = "#808080" },
        new TipoEntreno { Nombre = "Regenerativo", Color = "#32CD32" },
        new TipoEntreno { Nombre = "Otro", Color = "#FFFFFF" }
    };

    protected override async Task OnInitializedAsync()
    {
        await CargarCalendario();
    }

    private async Task CargarCalendario()
    {
        diasEnMes = DateTime.DaysInMonth(fechaActual.Year, fechaActual.Month);
        var primerDiaMes = new DateTime(fechaActual.Year, fechaActual.Month, 1);
        diasVaciosInicio = (int)primerDiaMes.DayOfWeek;

        try
        {
            logsDelMes = await Http.GetFromJsonAsync<List<RunningLogs>>($"https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/runningapi/plan/{TargetUserId}/{fechaActual.Month}/{fechaActual.Year}");
        }
        catch { logsDelMes = new List<RunningLogs>(); }
    }

    private RunningLogs ObtenerLog(int dia) => logsDelMes.FirstOrDefault(l => l.Fecha.Day == dia);

    private string ObtenerColor(string tipo)
    {
        var t = TiposEntreno.FirstOrDefault(x => x.Nombre == tipo);
        return t != null ? t.Color : "#F8C545";
    }

    private async Task MesAnterior() { fechaActual = fechaActual.AddMonths(-1); await CargarCalendario(); }
    private async Task MesSiguiente() { fechaActual = fechaActual.AddMonths(1); await CargarCalendario(); }

    private void AbrirModal(int dia)
    {
        fechaSeleccionada = new DateTime(fechaActual.Year, fechaActual.Month, dia);
        var existente = ObtenerLog(dia);

        if (existente != null)
        {
            logEditando = new RunningLogs
            {
                RunningLogID = existente.RunningLogID,
                UsuarioID = existente.UsuarioID,
                Fecha = existente.Fecha,
                Titulo = existente.Titulo,
                Descripcion = existente.Descripcion,
                Tipo = existente.Tipo,
                Realizado = existente.Realizado,
                RPE = existente.RPE,
                ComentariosAtleta = existente.ComentariosAtleta
            };
        }
        else
        {
            logEditando = new RunningLogs
            {
                UsuarioID = TargetUserId,
                Fecha = fechaSeleccionada,
                Tipo = "Acumulativo",
                Titulo = "",
                Descripcion = ""
            };
        }
        mostrarModal = true;
    }

    private void SeleccionarTipo(string tipo) => logEditando.Tipo = tipo;

    private async Task GuardarLog()
    {
        if (string.IsNullOrEmpty(logEditando.Titulo))
        {
            await App.Current.MainPage.DisplayAlert("Falta Título", "Pon una instrucción breve", "OK");
            return;
        }
        if (logEditando.Descripcion == null) logEditando.Descripcion = "";

        try
        {
            var resp = await Http.PostAsJsonAsync("https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/runningapi/guardar", logEditando);
            if (resp.IsSuccessStatusCode)
            {
                mostrarModal = false;
                await CargarCalendario();
            }
            else
            {
                var error = await resp.Content.ReadAsStringAsync();
                await App.Current.MainPage.DisplayAlert("Error", $"API: {error}", "OK");
            }
        }
        catch (Exception ex) { await App.Current.MainPage.DisplayAlert("Error", ex.Message, "OK"); }
    }

    private async Task EliminarLog()
    {
        bool confirm = await App.Current.MainPage.DisplayAlert("Borrar", "¿Quitar este entrenamiento?", "Sí", "No");
        if (!confirm) return;

        try
        {
            var resp = await Http.PostAsync($"https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/runningapi/eliminar/{logEditando.RunningLogID}", null);
            if (resp.IsSuccessStatusCode)
            {
                mostrarModal = false;
                await CargarCalendario();
            }
        }
        catch { }
    }

    private string ObtenerColorRPE(int valor)
    {
        if (valor <= 2) return "#32CD32"; 
        if (valor <= 4) return "#ADFF2F"; 
        if (valor <= 6) return "#FFD700"; 
        if (valor <= 8) return "#FF8C00"; 
        return "#FF0000"; 
    }

    private void CerrarModal() => mostrarModal = false;
    private void Volver() => Nav.NavigateTo("/usuarios-view");
}