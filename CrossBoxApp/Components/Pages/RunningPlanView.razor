@page "/running-plan/{TargetUserId:guid}/{NombreAtleta}"
@using CrossBoxApp.Models
@using CrossBoxApp.Models.Services
@inject NavigationManager Nav
@inject HttpClient Http

<div class="main-layout">

    <div class="navbar-container">
        <div class="nav-left" @onclick="Volver">
            <i class="fas fa-arrow-left"></i> VOLVER
        </div>
        <div class="nav-title">PLAN: @NombreAtleta.ToUpper()</div>
        <div class="nav-right"></div>
    </div>

    <div class="scrollable-content">
        
        <div class="month-control fade-in">
            <button class="btn-nav" @onclick="MesAnterior"><i class="fas fa-chevron-left"></i></button>
            <span class="month-label">@fechaActual.ToString("MMMM yyyy").ToUpper()</span>
            <button class="btn-nav" @onclick="MesSiguiente"><i class="fas fa-chevron-right"></i></button>
        </div>

        <div class="calendar-grid fade-in">
            <div class="day-name">DOM</div> <div class="day-name">LUN</div> <div class="day-name">MAR</div>
            <div class="day-name">MIE</div> <div class="day-name">JUE</div> <div class="day-name">VIE</div>
            <div class="day-name">SAB</div>

            @for (int i = 0; i < diasVaciosInicio; i++)
            {
                <div class="calendar-day empty"></div>
            }

            @for (int dia = 1; dia <= diasEnMes; dia++)
            {
                int diaActual = dia;
                var log = ObtenerLog(diaActual);
                bool tieneData = log != null;
                bool estaRealizado = tieneData && (log.Realizado == true);

                string colorBorde = tieneData ? ObtenerColor(log.Tipo) : "#333";

                <div class="calendar-day"
                     style="border-color: @colorBorde; background: @(tieneData ? "rgba(30,30,30,0.8)" : "#1a1a1a")"
                     @onclick="() => AbrirModal(diaActual)">

                    <span class="day-number" style="color: @(tieneData? colorBorde : "#666")">@dia</span>

                    @if (tieneData)
                    {
                        <div class="day-content">
                            <i class="fas fa-running running-icon" style="color: @colorBorde"></i>
                            <span class="day-type" style="color: @colorBorde">@log.Tipo</span>
                        </div>

                        // --- INDICADOR DE QUE YA CUMPLIÓ ---
                        @if (estaRealizado)
                        {
                            <div class="done-badge"><i class="fas fa-check"></i></div>
                        }
                    }
                </div>
            }
        </div>

        <div class="legend-scroll">
            @foreach (var t in TiposEntreno)
            {
                <div class="legend-item"><span class="dot" style="background:@t.Color"></span> @t.Nombre</div>
            }
        </div>
        
        <div style="height: 40px;"></div>
    </div>
</div>

@if (mostrarModal)
{
    <div class="modal-overlay fade-in">
        <div class="modal-content custom-modal slide-up">
            <div class="modal-header">
                <h5 style="margin:0; font-family:'Oswald'; color:black;">@fechaSeleccionada.ToString("dddd dd 'de' MMMM")</h5>
                <button class="btn-close-custom" @onclick="CerrarModal"><i class="fas fa-times" style="color:black;"></i></button>
            </div>

            <div class="modal-body">

                @if (logEditando.Realizado == true)
                {
                    <div class="feedback-card-premium">

                        <div class="feedback-top">
                            <div class="status-indicator">
                                <i class="fas fa-check-circle"></i> COMPLETADO
                            </div>

                            @* Círculo de RPE estilo medalla *@
                            <div class="rpe-circle" style="background-color: @ObtenerColorRPE(logEditando.RPE ?? 0)">
                                <span class="rpe-val">@(logEditando.RPE ?? 0)</span>
                                <span class="rpe-tag">RPE</span>
                            </div>
                        </div>

                        <div class="comment-bubble">
                            <label><i class="fas fa-comment-alt"></i> Comentarios del Atleta:</label>
                            <p>"@(string.IsNullOrEmpty(logEditando.ComentariosAtleta) ? "Sin comentarios..." : logEditando.ComentariosAtleta)"</p>
                        </div>

                    </div>

                    @* Separador sutil antes de los campos de edición *@
                    <div class="feedback-divider"></div>
                }

                <label class="lbl-input">Tipo de Sesión:</label>
                <div class="type-grid mb-3">
                    @foreach (var tipo in TiposEntreno)
                    {
                        <div class="type-btn @(logEditando.Tipo == tipo.Nombre ? "selected" : "")"
                             style="border-color: @tipo.Color; color: @(logEditando.Tipo == tipo.Nombre ? "black" : "white"); background: @(logEditando.Tipo == tipo.Nombre ? tipo.Color : "transparent")"
                             @onclick="() => SeleccionarTipo(tipo.Nombre)">
                            @tipo.Nombre
                        </div>
                    }
                </div>

                <label class="lbl-input">Instrucciones Breves (Título):</label>
                <input @bind="logEditando.Titulo" class="form-control input-dark mb-3" placeholder="Ej: 12k Ritmo Carrera" />

                <label class="lbl-input">Detalles / Instrucciones Completas:</label>
                <textarea @bind="logEditando.Descripcion" class="form-control input-dark" rows="4" placeholder="Desglosa el calentamiento, bloques principales..."></textarea>
            </div>

            <div class="modal-footer">
                @if (logEditando.RunningLogID != Guid.Empty)
                {
                    <button class="btn-delete" @onclick="EliminarLog"><i class="fas fa-trash"></i></button>
                }
                <button class="btn-confirm" @onclick="GuardarLog">GUARDAR CAMBIOS</button>
            </div>
        </div>
    </div>
}

