@page "/test-config"
@using CrossBoxApp.Models
@using CrossBoxApp.Models.Services
@inject NavigationManager Nav
@inject HttpClient Http
@inject SesionService Sesion

<div class="main-layout">

    <div class="navbar-container">
        <div class="nav-left" @onclick="Volver">
            <i class="fas fa-arrow-left"></i> VOLVER
        </div>
        <div class="nav-title">CONFIGURACIÓN TESTS</div>
        <div class="nav-right" @onclick="AbrirModal">
            <i class="fas fa-plus" style="color:#F8C545; font-size:1.2rem;"></i>
        </div>
    </div>

    <div class="scrollable-content">
        
        @if (cargando)
        {
            <div class="text-center mt-5">
                <div class="spinner-border text-warning"></div>
            </div>
        }
        else if (listaTests.Count == 0)
        {
            <div class="empty-state fade-in">
                <i class="fas fa-clipboard-list" style="opacity: 0.3; font-size: 3rem; margin-bottom: 15px;"></i>
                <p>No hay Tests configurados en tu Box.</p>
                <button class="btn-agregar-primero" @onclick="AbrirModal">AGREGAR PRIMERO</button>
            </div>
        }
        else
        {
            @foreach (var grupo in listaTests)
            {
                <div class="group-card fade-in">
                    <div class="group-header">
                        @grupo.CategoriaNombre.ToUpper() 
                    </div>
                    <div class="group-body">
                        @foreach (var item in grupo.Items)
                        {
                            <div class="test-item">
                                <div class="test-info">
                                    <span class="test-name">@item.Nombre</span>
                                    <span class="test-measure">@item.MedidaNombre</span>
                                </div>

                                @if (Sesion.Usuario.TipoUsuarioID == 1 || Sesion.TienePermiso("DELETE_DATA"))
                                {
                                    <button class="btn-delete" @onclick="() => EliminarTest(item)">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        }
        
        <div style="height: 40px;"></div>
    </div>
</div>

@if (mostrarModal)
{
    <div class="modal-overlay fade-in">
        <div class="modal-content custom-modal slide-up">
            <div class="modal-header">
                <h5 style="color:#F8C545; margin:0; font-family:'Oswald'">NUEVO TEST</h5>
                <button class="btn-close-custom" @onclick="CerrarModal"><i class="fas fa-times"></i></button>
            </div>
            <div class="modal-body">
                
                <label class="lbl-input">Categoría (Grupo):</label>
                <select @bind="nuevoTest.TestID" class="form-control input-dark mb-3">
                    <option value="">-- Seleccionar --</option>
                    @foreach(var cat in catalogos.Categorias) { <option value="@cat.Id">@cat.Nombre</option> }
                </select>

                <label class="lbl-input">Nombre del Test:</label>
                <input type="text" @bind="nuevoTest.Descripcion" class="form-control input-dark mb-3" placeholder="Ej: Fran, 1RM Back Squat" />

                <label class="lbl-input">Tipo de Medida:</label>
                <select @bind="nuevoTest.MedidaTestID" class="form-control input-dark mb-3">
                    <option value="">-- Seleccionar --</option>
                    @foreach(var med in catalogos.Medidas) { <option value="@med.Id">@med.Nombre</option> }
                </select>

            </div>
            <div class="modal-footer">
                <button class="btn-cancel" @onclick="CerrarModal">Cancelar</button>
                <button class="btn-confirm" @onclick="GuardarTest">Guardar</button>
            </div>
        </div>
    </div>
}

<style>
    /* --- ESTRUCTURA BASE --- */
    .main-layout {
        position: fixed; top: 0; left: 0; right: 0; bottom: 0;
        background-color: #0d0d0d; display: flex; flex-direction: column; z-index: 1;
    }

    .navbar-container {
        flex-shrink: 0;
        padding-top: calc(env(safe-area-inset-top) + 5px);
        padding-bottom: 10px; padding-left: 20px; padding-right: 20px;
        background-color: #0d0d0d; border-bottom: 1px solid #F8C545;
        color: white; display: flex; justify-content: space-between; align-items: center;
        z-index: 100; font-family: 'Oswald'; min-height: 60px;
    }

    .nav-left { color: #F8C545; font-weight: bold; cursor: pointer; display: flex; align-items: center; gap: 8px; font-size: 0.9rem; }
    .nav-title { font-weight: bold; font-size: 1.1rem; color: white; letter-spacing: 1px; }
    .nav-right { width: 60px; display: flex; justify-content: flex-end; cursor: pointer; }

    .scrollable-content {
        flex-grow: 1; overflow-y: auto; padding: 20px;
        display: flex; flex-direction: column; align-items: center;
        -webkit-overflow-scrolling: touch; padding-bottom: 40px;
    }

    /* --- ESTILOS ESPECÍFICOS CONFIG --- */
    
    .group-card { 
        background: #1a1a1a; 
        border: 1px solid #333; 
        border-radius: 10px; 
        margin-bottom: 20px; 
        overflow: hidden; 
        width: 100%; 
        max-width: 600px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.3);
    }
    
    .group-header { 
        background: #F8C545; 
        color: black; 
        padding: 10px 15px; 
        font-family: 'Oswald'; 
        font-weight: bold; 
        font-size: 1.1rem; 
        letter-spacing: 1px;
    }
    
    .group-body { padding: 5px 15px; }
    
    .test-item { 
        display: flex; 
        justify-content: space-between; 
        align-items: center; 
        padding: 12px 0; 
        border-bottom: 1px solid #333; 
    }
    .test-item:last-child { border-bottom: none; }
    
    .test-info { display: flex; flex-direction: column; gap: 2px; }
    .test-name { color: #eee; font-family: 'Roboto'; font-size: 1rem; }
    .test-measure { color: #F8C545; font-size: 0.8rem; font-style: italic; }
    
    .btn-delete { 
        background: transparent; 
        border: 1px solid #333; 
        color: #d9534f; 
        font-size: 0.9rem; 
        padding: 5px 10px; 
        border-radius: 5px;
        transition: 0.2s;
    }
    .btn-delete:active { background: #d9534f; color: white; border-color: #d9534f; }

    .btn-agregar-primero {
        background: transparent;
        border: 1px solid #F8C545;
        color: #F8C545;
        padding: 10px 20px;
        border-radius: 30px;
        font-weight: bold;
        margin-top: 15px;
    }

    /* MODAL */
    .modal-overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.85); z-index: 2000; display: flex; justify-content: center; align-items: center; backdrop-filter: blur(4px); }
    .custom-modal { background: #1a1a1a; width: 90%; max-width: 400px; border: 1px solid #F8C545; border-radius: 12px; overflow: hidden; display: flex; flex-direction: column; box-shadow: 0 10px 30px rgba(0,0,0,0.8); }
    .modal-header { background: #222; padding: 15px; display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #333; }
    .modal-body { padding: 20px; }
    .modal-footer { padding: 15px; background: #222; display: flex; justify-content: flex-end; gap: 10px; border-top: 1px solid #333; }
    
    .lbl-input { color: #aaa; font-size: 0.9rem; margin-bottom: 5px; display: block; }
    .input-dark { background: #333 !important; color: white !important; border: 1px solid #555; }
    .input-dark:focus { border-color: #F8C545; box-shadow: none; }

    .btn-close-custom { background: none; border: none; color: white; font-size: 1.2rem; }
    .btn-confirm { background: #F8C545; color: black; border: none; padding: 8px 20px; font-weight: bold; border-radius: 5px; }
    .btn-cancel { background: #333; color: white; border: none; padding: 8px 20px; border-radius: 5px; }

    .empty-state { text-align: center; margin-top: 50px; color: #666; font-family: 'Roboto'; }
    .fade-in { animation: fadeIn 0.5s ease; }
    .slide-up { animation: slideUp 0.3s ease; }
    @@keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    @@keyframes slideUp { from { transform: translateY(20px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }
</style>

@code {
    private List<TestGroupDto> listaTests = new List<TestGroupDto>();
    private TestConfigCatalogsDto catalogos = new TestConfigCatalogsDto { Categorias = new(), Medidas = new() };
    private CreateTestBoxes nuevoTest = new CreateTestBoxes();
    
    private bool cargando = true;
    private bool mostrarModal = false;

    protected override async Task OnInitializedAsync()
    {
        if (Sesion.Usuario == null) { Nav.NavigateTo("/"); return; }

        if (Sesion.Usuario.TipoUsuarioID != 1 && !Sesion.TienePermiso("MANAGE_WOD"))
        {
            await App.Current.MainPage.DisplayAlert("Acceso Denegado", "No tienes permisos de configuración.", "OK");
            Nav.NavigateTo("/home");
            return;
        }

        await CargarDatos();
        try {
            var response = await Http.GetAsync($"https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/testapi/catalogos");
            if (response.IsSuccessStatusCode) catalogos = await response.Content.ReadFromJsonAsync<TestConfigCatalogsDto>();
        } catch {}
    }

    private async Task CargarDatos()
    {
        try {
            cargando = true;
            var response = await Http.GetAsync($"https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/testapi/configuracion/{Sesion.Usuario.BoxID}");
            if (response.IsSuccessStatusCode) listaTests = await response.Content.ReadFromJsonAsync<List<TestGroupDto>>();
        } finally { cargando = false; }
    }

    private void AbrirModal() => mostrarModal = true;
    private void CerrarModal() => mostrarModal = false;

    private async Task GuardarTest()
    {
        if (nuevoTest.TestID == Guid.Empty || nuevoTest.MedidaTestID == Guid.Empty || string.IsNullOrEmpty(nuevoTest.Descripcion))
        {
            await App.Current.MainPage.DisplayAlert("Error", "Llena todos los campos", "OK"); return;
        }
        try {
            nuevoTest.BoxID = Sesion.Usuario.BoxID;
            var response = await Http.PostAsJsonAsync("https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/testapi/crear", nuevoTest);
            if (response.IsSuccessStatusCode) {
                await App.Current.MainPage.DisplayAlert("Éxito", "Test Creado", "OK");
                mostrarModal = false; nuevoTest = new CreateTestBoxes(); await CargarDatos();
            }
        } catch (Exception ex) { await App.Current.MainPage.DisplayAlert("Error", ex.Message, "OK"); }
    }

    private async Task EliminarTest(TestItemDto item)
    {
        bool confirmar = await App.Current.MainPage.DisplayAlert("Eliminar", $"¿Seguro que deseas eliminar '{item.Nombre}'?", "Sí", "Cancelar");
        if (!confirmar) return;
        try {
            var response = await Http.PostAsync($"https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/testapi/eliminar/{item.TestBoxId}", null);
            if (response.IsSuccessStatusCode) await CargarDatos();
            else { var error = await response.Content.ReadAsStringAsync(); await App.Current.MainPage.DisplayAlert("Error", error, "OK"); }
        } catch (Exception ex) { await App.Current.MainPage.DisplayAlert("Error", ex.Message, "OK"); }
    }

    private void Volver() => Nav.NavigateTo("/home");
}