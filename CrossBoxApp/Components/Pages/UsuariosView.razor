@code {
    // CAMBIO IMPORTANTE: Usamos el DTO nuevo
    private List<AtletaConEstadoDto> listaUsuarios = new List<AtletaConEstadoDto>();

    private bool cargando = true;

    // Variables Modal Pago
    private bool mostrarModalPago = false;
    private AtletaConEstadoDto usuarioSeleccionado;
    private DateTime fechaPagoSeleccionada = DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        await CargarUsuarios();
    }

    private async Task CargarUsuarios()
    {
        try
        {
            if (Sesion.Usuario == null) return;
            cargando = true;

            // LLAMADA AL NUEVO ENDPOINT
            // Asegúrate de usar la URL completa si tienes problemas
            var response = await Http.GetAsync($"https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/pagosapi/atletas-status/{Sesion.Usuario.BoxID}");

            if (response.IsSuccessStatusCode)
            {
                listaUsuarios = await response.Content.ReadFromJsonAsync<List<AtletaConEstadoDto>>();
            }
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error", ex.Message, "OK");
        }
        finally { cargando = false; }
    }

    private void ToggleMenu(AtletaConEstadoDto usuario)
    {
        // Esta propiedad "MostrarMenu" no viene del servidor,
        // pero Blazor permite agregar propiedades extras si extendemos la clase parcial
        // Ojo: Si te marca error aquí, ve a la carpeta Models y agrega "public bool MostrarMenu { get; set; }" al DTO AtletaConEstadoDto.
        foreach (var u in listaUsuarios) { if (u != usuario) u.MostrarMenu = false; }
        usuario.MostrarMenu = !usuario.MostrarMenu;
    }

    // --- LÓGICA DE PAGO ---
    private void AbrirModalRenovacion(AtletaConEstadoDto u)
    {
        u.MostrarMenu = false;
        usuarioSeleccionado = u;

        // Sugerir fecha inteligente
        if (u.DiasRestantes > 0 && u.FechaVencimiento > DateTime.MinValue)
        {
            fechaPagoSeleccionada = u.FechaVencimiento; // Continuidad
        }
        else
        {
            fechaPagoSeleccionada = DateTime.Today; // Nuevo o Vencido
        }
        mostrarModalPago = true;
    }

    private async Task ConfirmarRenovacion()
    {
        try
        {
            var req = new RenovarPagoRequest
            {
                UsuarioID = usuarioSeleccionado.UsuarioID,
                NuevaFechaInicio = fechaPagoSeleccionada
            };

            var response = await Http.PostAsJsonAsync("https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/pagosapi/renovar", req);

            if (response.IsSuccessStatusCode)
            {
                await App.Current.MainPage.DisplayAlert("Éxito", "Pago registrado correctamente.", "OK");
                mostrarModalPago = false;
                await CargarUsuarios(); // Recargar para ver el cambio a VERDE
            }
            else
            {
                await App.Current.MainPage.DisplayAlert("Error", "No se pudo guardar.", "OK");
            }
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error", ex.Message, "OK");
        }
    }

    // --- ACCIONES SECUNDARIAS ---
    private void VerEvaluaciones(AtletaConEstadoDto u)
    {
        u.MostrarMenu = false;
        Nav.NavigateTo($"/evaluaciones/{u.UsuarioID}/{u.NombreCompleto}");
    }

    private async Task RestablecerPass(AtletaConEstadoDto u)
    {
        u.MostrarMenu = false;
        bool confirm = await App.Current.MainPage.DisplayAlert("Seguridad", $"¿Resetear contraseña a '123456'?", "Sí", "No");
        // ... tu lógica de reset ...
    }

    private void IrARunning(AtletaConEstadoDto u)
    {
        u.MostrarMenu = false;
        Nav.NavigateTo($"/running-plan/{u.UsuarioID}/{u.NombreCompleto}");
    }

    private async Task EliminarUsuario(AtletaConEstadoDto u)
    {
        u.MostrarMenu = false;

        // Alerta más seria
        bool confirm = await App.Current.MainPage.DisplayAlert("⚠️ ELIMINAR DEFINITIVAMENTE",
            $"Se borrarán permanentemente sus fotos, récords, pagos y perfil. ¿Estás seguro?",
            "SÍ, BORRAR TODO", "Cancelar");

        if (!confirm) return;

        try
        {
            // Llamamos al nuevo endpoint "eliminar-definitivo"
            var response = await Http.PostAsync($"api/usuarios/eliminar-definitivo/{u.UsuarioID}", null);

            if (response.IsSuccessStatusCode)
            {
                await App.Current.MainPage.DisplayAlert("Hecho", "Usuario y datos eliminados.", "OK");
                listaUsuarios.Remove(u); // Lo quitamos de la pantalla
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                await App.Current.MainPage.DisplayAlert("Error", $"No se pudo borrar: {error}", "OK");
            }
        }
        catch (Exception ex)
        {
            await App.Current.MainPage.DisplayAlert("Error", ex.Message, "OK");
        }
    }

    private void Volver() => Nav.NavigateTo("/home");
}