@code {
    [Parameter] public Guid TargetUserId { get; set; }
    private DetallePublicoDto perfil;
    private bool mostrarAnimacionMatch = false;
    private string imagenZoomUrl = null;

    protected override async Task OnInitializedAsync()
    {
        if (Sesion.Usuario == null) { Nav.NavigateTo("/"); return; }
        await CargarPerfil();
    }

    private async Task CargarPerfil()
    {
        try {
            var miId = Sesion.Usuario.UsuarioID;
            // Asegúrate que tu API devuelva los nuevos campos: Apodo, UsarApodo, FotoCertificado1Url, etc.
            perfil = await Http.GetFromJsonAsync<DetallePublicoDto>($"https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/SocialApi/detalle-publico/{TargetUserId}/{miId}");
        } catch { }
    }

    // Lógica para decidir qué nombre mostrar
    private string NombrePrincipal
    {
        get
        {
            if (perfil == null) return "";
            // Si el usuario activó UsarApodo Y tiene uno configurado, úsalo.
            if (perfil.UsarApodo && !string.IsNullOrWhiteSpace(perfil.Apodo))
            {
                return perfil.Apodo;
            }
            // Si no, usa el nombre real
            return perfil.NombreCompleto;
        }
    }

    private async Task HacerMatch()
    {
        try {
            var req = new LikeRequest { LikerID = Sesion.Usuario.UsuarioID, FotoID = TargetUserId };
            var resp = await Http.PostAsJsonAsync("https://api-aftrack-mx-fphnazfmahdedtcj.canadacentral-01.azurewebsites.net/api/SocialApi/hacer-match", req);
            if (resp.IsSuccessStatusCode) {
                var result = await resp.Content.ReadFromJsonAsync<MatchResponseDto>();
                if (result.EsMatchMutuo) {
                    mostrarAnimacionMatch = true;
                    await CargarPerfil();
                } else {
                    await CargarPerfil();
                    await App.Current.MainPage.DisplayAlert("¡Listo!", "Tu interés ha sido enviado.", "OK");
                }
            }
        } catch { }
    }

    private async Task AbrirWhatsApp()
    {
        if (perfil?.WhatsappTarget == null) return;
        try {
            var url = $"https://wa.me/{perfil.WhatsappTarget.Replace("+", "").Replace(" ", "")}";
            await Browser.Default.OpenAsync(url, BrowserLaunchMode.External);
        } catch { }
    }

    private void VerImagenFull(string url)
    {
        imagenZoomUrl = url;
    }

    private void CerrarZoom()
    {
        imagenZoomUrl = null;
    }

    private void CerrarMatch() => mostrarAnimacionMatch = false;
    private void Volver() => Nav.NavigateTo("/entrenamos-juntos");
}