@page "/perfil-publico/{TargetUserId:guid}"
@using CrossBoxApp.Models
@using CrossBoxApp.Models.Services
@using CrossBoxApp.Models.Social
@inject NavigationManager Nav
@inject HttpClient Http
@inject SesionService Sesion

<div class="main-layout">

    @* NAVBAR FIJA SUPERIOR *@
    <div class="navbar-container">
        <div class="nav-left" @onclick="Volver">
            <i class="fas fa-arrow-left"></i> VOLVER
        </div>
        <div class="nav-title">PERFIL ATLETA</div>
        <div class="nav-right"></div>
    </div>

    @* CONTENEDOR DE SCROLL *@
    <div class="scrollable-content">
        
        @if (perfil == null)
        {
            <div class="spinner-container">
                <div class="spinner-border text-warning"></div>
            </div>
        }
        else
        {
            <div class="hero-image-container">
                @if (!string.IsNullOrEmpty(perfil.FotoUrl))
                {
                    <img src="@perfil.FotoUrl" class="hero-image" />
                }
                else
                {
                    <div class="hero-initial-placeholder">
                        @(perfil.NombreCompleto?.Substring(0, 1).ToUpper() ?? "A")
                    </div>
                }
                
                <div class="hero-overlay-info">
                    <h1 class="user-name">@perfil.NombreCompleto</h1>
                </div>
            </div>

            <div class="info-section">
                
                @* DISEÑO DE LIKES RECUPERADO Y MEJORADO *@
                <div class="likes-badge-premium">
                    <i class="fas fa-heart"></i>
                    <span class="likes-count">@perfil.TotalLikes</span>
                    <span class="likes-text">LIKES ACUMULADOS</span>
                </div>

                <div class="bio-box">
                    <label>SOBRE MÍ:</label>
                    <p>@(string.IsNullOrEmpty(perfil.Descripcion) ? "Sin descripción..." : perfil.Descripcion)</p>
                </div>

                @if (perfil.EsMatchMutuo)
                {
                    <div class="match-success-box fade-in">
                        <div class="match-badge">¡YA HAN HECHO MATCH!</div>
                        
                        <div class="whatsapp-pill" @onclick="AbrirWhatsApp">
                            <i class="fas fa-comment-dots"></i>
                            <div class="btn-text-container">
                                <span class="main-btn-text">CLICK PARA CHATEAR POR WHATSAPP</span>
                                <span class="sub-btn-text">TELÉFONO: @perfil.WhatsappTarget</span>
                            </div>
                        </div>
                    </div>
                }
                else if (perfil.YaLeDiMatch)
                {
                    <div class="match-sent-box pulse">
                        <i class="fas fa-check-circle"></i>
                        <span>MATCH ENVIADO</span>
                        <small>Esperando respuesta...</small>
                    </div>
                }
                else
                {
                    <button class="btn-match" @onclick="HacerMatch">
                        <i class="fas fa-heart"></i> HACER MATCH
                    </button>
                }
            </div>
        }
        
        <div style="height: 60px;"></div>
    </div>
</div>

<style>
    /* --- ESTRUCTURA BASE --- */
    .main-layout {
        position: fixed; top: 0; left: 0; right: 0; bottom: 0;
        background-color: #0d0d0d; display: flex; flex-direction: column; z-index: 1;
    }

    .navbar-container {
        flex-shrink: 0;
        padding-top: calc(env(safe-area-inset-top) + 5px);
        padding-bottom: 10px; padding-left: 20px; padding-right: 20px;
        background-color: #1a1a1a; border-bottom: 1px solid #F8C545;
        color: white; display: flex; justify-content: space-between; align-items: center;
        z-index: 100; font-family: 'Oswald'; min-height: 60px;
    }

    .scrollable-content {
        flex-grow: 1; overflow-y: auto; 
        background-color: #0d0d0d;
        display: flex; flex-direction: column; 
        -webkit-overflow-scrolling: touch;
    }

    /* --- HERO --- */
    .hero-image-container {
        width: 100%; height: 380px; position: relative; background: #000; flex-shrink: 0;
    }

    .hero-image {
        width: 100%; height: 100%; object-fit: cover;
        mask-image: linear-gradient(to bottom, black 75%, transparent 100%);
        -webkit-mask-image: linear-gradient(to bottom, black 75%, transparent 100%);
    }

    .hero-overlay-info { position: absolute; bottom: 15px; left: 0; right: 0; text-align: center; }
    .user-name { font-family: 'Oswald'; font-size: 2.6rem; color: #F8C545; text-transform: uppercase; text-shadow: 2px 2px 12px rgba(0,0,0,1); margin: 0; }

    /* --- NUEVO DISEÑO LIKES BADGE --- */
    .likes-badge-premium {
        background: rgba(255, 255, 255, 0.08);
        padding: 10px 25px;
        border-radius: 50px;
        border: 1px solid rgba(248, 197, 69, 0.3);
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 25px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.5);
    }

    .likes-badge-premium i { color: #ff4757; font-size: 1.2rem; filter: drop-shadow(0 0 5px rgba(255,71,87,0.5)); }
    .likes-count { color: #F8C545; font-family: 'Oswald'; font-size: 1.4rem; font-weight: bold; }
    .likes-text { color: #eee; font-family: 'Oswald'; font-size: 0.9rem; letter-spacing: 1px; }

    /* --- INFO SECTION --- */
    .info-section { padding: 20px; display: flex; flex-direction: column; align-items: center; }

    .bio-box { width: 100%; background: #1a1a1a; padding: 15px; border-radius: 12px; border-left: 4px solid #F8C545; margin-bottom: 30px; }
    .bio-box label { color: #F8C545; font-size: 0.75rem; font-weight: bold; display: block; margin-bottom: 5px; font-family: 'Oswald'; letter-spacing: 1px; }
    .bio-box p { color: #ccc; font-style: italic; margin: 0; font-size: 0.95rem; }

    /* --- WHATSAPP PILL CORREGIDA --- */
    .whatsapp-pill {
        background: #25D366; color: #000; padding: 12px 20px; border-radius: 12px; 
        display: flex; align-items: center; gap: 15px; cursor: pointer; 
        transition: 0.3s; margin-top: 15px; width: 100%; box-shadow: 0 6px 20px rgba(0,0,0,0.4);
    }

    .whatsapp-pill i { font-size: 1.8rem; }
    .btn-text-container { display: flex; flex-direction: column; text-align: left; }
    .main-btn-text { font-family: 'Oswald'; font-weight: bold; font-size: 0.85rem; line-height: 1.2; }
    .sub-btn-text { font-family: 'Roboto'; font-size: 0.8rem; font-weight: 900; opacity: 0.8; }

    .match-success-box { width: 100%; background: rgba(37, 211, 102, 0.05); border: 1px solid #25D366; border-radius: 15px; padding: 20px; text-align: center; }
    .match-badge { color: #25D366; font-family: 'Oswald'; font-size: 1.3rem; font-weight: bold; margin-bottom: 5px; }

    .btn-match {
        width: 100%; padding: 16px; background: linear-gradient(45deg, #F8C545, #ff9f43);
        border: none; border-radius: 50px; color: black; font-weight: 900; font-family: 'Oswald';
        font-size: 1.4rem; box-shadow: 0 4px 15px rgba(248, 197, 69, 0.3);
    }

    .spinner-container { display: flex; justify-content: center; align-items: center; padding-top: 100px; width: 100%; }
</style>
@code {
    [Parameter] public Guid TargetUserId { get; set; }
    private DetallePublicoDto perfil;
    private bool mostrarAnimacionMatch = false;

    protected override async Task OnInitializedAsync()
    {
        if (Sesion.Usuario == null) { Nav.NavigateTo("/"); return; }
        await CargarPerfil();
    }

    private async Task CargarPerfil()
    {
        try {
            var miId = Sesion.Usuario.UsuarioID;
            perfil = await Http.GetFromJsonAsync<DetallePublicoDto>($"https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/SocialApi/detalle-publico/{TargetUserId}/{miId}");
        } catch { }
    }

    private async Task HacerMatch()
    {
        try {
            var req = new LikeRequest { LikerID = Sesion.Usuario.UsuarioID, FotoID = TargetUserId };
            var resp = await Http.PostAsJsonAsync("https://apitcb.pladse.dsistemas.educacionchiapas.gob.mx/api/SocialApi/hacer-match", req);
            if (resp.IsSuccessStatusCode) {
                var result = await resp.Content.ReadFromJsonAsync<MatchResponseDto>();
                if (result.EsMatchMutuo) {
                    mostrarAnimacionMatch = true;
                    await CargarPerfil();
                } else {
                    await CargarPerfil();
                    await App.Current.MainPage.DisplayAlert("¡Listo!", "Tu interés ha sido enviado.", "OK");
                }
            }
        } catch { }
    }

    private async Task AbrirWhatsApp()
    {
        if (perfil?.WhatsappTarget == null) return;
        try {
            var url = $"https://wa.me/{perfil.WhatsappTarget.Replace("+", "").Replace(" ", "")}";
            await Browser.Default.OpenAsync(url, BrowserLaunchMode.External);
        } catch { }
    }

    private void CerrarMatch() => mostrarAnimacionMatch = false;
    private void Volver() => Nav.NavigateTo("/entrenamos-juntos");
}