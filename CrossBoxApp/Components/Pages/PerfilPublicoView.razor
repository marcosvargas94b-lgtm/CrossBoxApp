@page "/perfil-publico/{TargetUserId:guid}"
@using CrossBoxApp.Models
@using CrossBoxApp.Models.Services
@using CrossBoxApp.Models.Social
@inject NavigationManager Nav
@inject HttpClient Http
@inject SesionService Sesion

<div class="main-layout">

    @* NAVBAR *@
    <div class="navbar-container">
        <div class="nav-left" @onclick="Volver">
            <i class="fas fa-arrow-left"></i> VOLVER
        </div>
        <div class="nav-title">PERFIL ATLETA</div>
        <div class="nav-right"></div>
    </div>

    <div class="scrollable-content">
        
        @if (perfil == null)
        {
            <div class="spinner-container">
                <div class="spinner-border text-warning"></div>
            </div>
        }
        else
        {
            @* --- HERO IMAGE (FOTO PERFIL) --- *@
            <div class="hero-image-container">
                @if (!string.IsNullOrEmpty(perfil.FotoUrl))
                {
                    <img src="@perfil.FotoUrl" class="hero-image" @onclick='() => VerImagenFull(perfil.FotoUrl)' />
                }
                else
                {
                    <div class="hero-initial-placeholder">
                        @(perfil.NombreCompleto?.Substring(0, 1).ToUpper() ?? "A")
                    </div>
                }
                
                <div class="hero-overlay-info">
                    @* --- LÓGICA DE NOMBRE VS APODO --- *@
                    <h1 class="user-name">@NombrePrincipal</h1>
                    
                    @if (perfil.UsarApodo && !string.IsNullOrEmpty(perfil.Apodo))
                    {
                        <p class="real-name">(@perfil.NombreCompleto)</p>
                    }
                </div>
            </div>

            <div class="info-section">
                
                @* BADGE LIKES *@
                <div class="likes-badge-premium">
                    <i class="fas fa-heart"></i>
                    <span class="likes-count">@perfil.TotalLikes</span>
                    <span class="likes-text">LIKES ACUMULADOS</span>
                </div>

                @* BIOGRAFÍA *@
                <div class="bio-box">
                    <label>SOBRE MÍ:</label>
                    <p>@(string.IsNullOrEmpty(perfil.Descripcion) ? "Sin descripción..." : perfil.Descripcion)</p>
                </div>

                @* --- GALERÍA DE FOTOS (CERTIFICADOS) --- *@
                @if (!string.IsNullOrEmpty(perfil.FotoCertificado1Url) || !string.IsNullOrEmpty(perfil.FotoCertificado2Url))
                {
                    <div class="gallery-section fade-in">
                        <h4 class="gallery-title"><i class="fas fa-images"></i> GALERÍA</h4>
                        
                        <div class="gallery-grid">
                            @if (!string.IsNullOrEmpty(perfil.FotoCertificado1Url))
                            {
                                <div class="gallery-item" @onclick='() => VerImagenFull(perfil.FotoCertificado1Url)'>
                                    <img src="@perfil.FotoCertificado1Url" />
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(perfil.FotoCertificado2Url))
                            {
                                <div class="gallery-item" @onclick='() => VerImagenFull(perfil.FotoCertificado2Url)'>
                                    <img src="@perfil.FotoCertificado2Url" />
                                </div>
                            }
                        </div>
                    </div>
                }

                @* --- ACCIONES (MATCH / WHATSAPP) --- *@
                <div class="actions-area mt-4">
                    @if (perfil.EsMatchMutuo)
                    {
                        <div class="match-success-box fade-in">
                            <div class="match-badge">¡YA HAN HECHO MATCH!</div>
                            
                            <div class="whatsapp-pill" @onclick="AbrirWhatsApp">
                                <i class="fas fa-comment-dots"></i>
                                <div class="btn-text-container">
                                    <span class="main-btn-text">CLICK PARA CHATEAR POR WHATSAPP</span>
                                    <span class="sub-btn-text">TELÉFONO: @perfil.WhatsappTarget</span>
                                </div>
                            </div>
                        </div>
                    }
                    else if (perfil.YaLeDiMatch)
                    {
                        <div class="match-sent-box pulse">
                            <i class="fas fa-check-circle"></i>
                            <span>MATCH ENVIADO</span>
                            <small>Esperando respuesta...</small>
                        </div>
                    }
                    else
                    {
                        <button class="btn-match" @onclick="HacerMatch">
                            <i class="fas fa-heart"></i> HACER MATCH
                        </button>
                    }
                </div>

            </div>
        }
        
        <div style="height: 60px;"></div>
    </div>
</div>

@* --- MODAL ZOOM IMAGEN --- *@
@if (!string.IsNullOrEmpty(imagenZoomUrl))
{
    <div class="image-zoom-overlay" @onclick="CerrarZoom">
        @* La X ahora está más abajo para no chocar con el notch *@
        <button class="btn-close-zoom"><i class="fas fa-times"></i></button>
        <img src="@imagenZoomUrl" class="zoomed-image" @onclick:stopPropagation="true" />
    </div>
}

