@page "/perfil-publico/{TargetUserId:guid}"
@using CrossBoxApp.Models
@using CrossBoxApp.Models.Services
@using CrossBoxApp.Models.Social
@inject NavigationManager Nav
@inject HttpClient Http
@inject SesionService Sesion

@* NAVBAR FIJA SUPERIOR *@
<div class="top-navbar">
    <div class="nav-left" @onclick="Volver">
        <i class="fas fa-arrow-left"></i> REGRESAR A LISTA
    </div>
</div>

@* CONTENEDOR DE SCROLL INDEPENDIENTE (EVITA BARRAS BLANCAS) *@
<div class="main-scroll-container">
    <div class="profile-detail-container">
        @if (perfil == null)
        {
            <div class="spinner-container">
                <div class="spinner-border text-warning"></div>
            </div>
        }
        else
        {
            <div class="hero-image-container">
                @if (!string.IsNullOrEmpty(perfil.FotoUrl))
                {
                    <img src="@perfil.FotoUrl" class="hero-image" />
                }
                else
                {
                    <div class="hero-initial-placeholder">
                        @(perfil.NombreCompleto?.Substring(0, 1).ToUpper() ?? "A")
                    </div>
                }
            </div>

            <div class="info-section">
                <h1 class="user-name">@perfil.NombreCompleto</h1>

                <div class="stats-badge">
                    <i class="fas fa-heart"></i> @perfil.TotalLikes Likes acumulados
                </div>

                <div class="bio-box">
                    <label>SOBRE MÍ:</label>
                    <p>@(string.IsNullOrEmpty(perfil.Descripcion) ? "Sin descripción..." : perfil.Descripcion)</p>
                </div>

                @if (perfil.EsMatchMutuo)
                {
                    <div class="match-success-box">
                        <h3>¡YA HAN HECHO MATCH!</h3>
                        <p>Comuníquense para entrenar:</p>
                        <div class="whatsapp-pill" @onclick="AbrirWhatsApp">
                            <i class="fab fa-whatsapp"></i>
                            <span>WA: @perfil.WhatsappTarget</span>
                        </div>
                    </div>
                }
                else if (perfil.YaLeDiMatch)
                {
                    <div class="match-sent-box">
                        <i class="fas fa-check-circle pulse"></i>
                        <span>Match Enviado</span>
                        <small>Esperando respuesta...</small>
                    </div>
                }
                else
                {
                    <button class="btn-match" @onclick="HacerMatch">
                        <i class="fas fa-heart"></i> HACER MATCH
                    </button>
                }
            </div>
        }
    </div>
</div>

@* MODAL DE ANIMACIÓN PARA NUEVO MATCH *@
@if (mostrarAnimacionMatch)
{
    <div class="match-overlay">
        <div class="match-content">
            <h1 class="match-title">IT'S A MATCH!</h1>
            <div class="hearts-animation">💖 ❤️ 💖</div>
            <p>¡Tú y @perfil.NombreCompleto se matchearon!</p>

            <div class="whatsapp-box" @onclick="AbrirWhatsApp">
                <i class="fab fa-whatsapp"></i>
                <span>WA: @perfil.WhatsappTarget</span>
            </div>

            <button class="btn-close-match" @onclick="CerrarMatch">GENIAL</button>
        </div>
    </div>
}

